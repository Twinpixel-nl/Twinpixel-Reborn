---
const {
  title,
  body,
  tags = [],
  href = "/expertise",
  variant = "blue" // blue | cyan | purple
} = Astro.props;

const accent =
  variant === "cyan" ? "#22c55e" :
  variant === "purple" ? "#7c3aed" :
  "#2F89FF";
---
<a
  class="card"
  href={href}
  style={`--accent:${accent};`}
  aria-label={`${title} bekijken`}
>
  <div class="top">
    <h3 class="h3">{title}</h3>
    <span class="pill">Bekijk â†’</span>
  </div>

  <p class="text">{body}</p>

  <div class="tags">
    {tags.map((t) => <span class="tag">{t}</span>)}
  </div>
</a>

<style>
  .card{
    display:block;
    border-radius: var(--radius);
    background: rgba(255,255,255,.035);
    border: 1px solid rgba(255,255,255,.11);

    padding: 22px;
    min-height: 320px;
    position: relative;
    overflow: hidden;

    transition: transform .18s ease, border-color .18s ease, background-color .18s ease;
    outline: none;
  }

  .card::before{
    content:"";
    position:absolute;
    inset:-1px;
    pointer-events:none;
    opacity: 0;
    background:
      radial-gradient(600px 260px at 20% 0%, color-mix(in srgb, var(--accent) 26%, transparent), transparent 62%),
      radial-gradient(520px 220px at 80% 20%, rgba(255,255,255,.06), transparent 68%);
    transition: opacity .18s ease;
  }

  .card::after{
    content:"";
    position:absolute;
    inset:0;
    border-radius: inherit;
    pointer-events:none;
    box-shadow: inset 0 0 0 1px rgba(255,255,255,.00);
    transition: box-shadow .18s ease;
  }

  .card:hover{
    transform: translateY(-4px);
    border-color: color-mix(in srgb, var(--accent) 55%, rgba(255,255,255,.16));
    background-color: rgba(255,255,255,.045);
  }
  .card:hover::before{ opacity: 1; }
  .card:hover::after{
    box-shadow: inset 0 0 0 1px color-mix(in srgb, var(--accent) 45%, transparent);
  }

  /* keyboard focus = premium */
  .card:focus-visible{
    transform: translateY(-2px);
    border-color: color-mix(in srgb, var(--accent) 55%, rgba(255,255,255,.18));
    background-color: rgba(255,255,255,.045);
  }
  .card:focus-visible::before{ opacity: 1; }
  .card:focus-visible::after{
    box-shadow:
      inset 0 0 0 1px color-mix(in srgb, var(--accent) 55%, transparent),
      0 0 0 4px rgba(255,255,255,.06);
  }

  .top{
    display:flex;
    align-items:flex-start;
    justify-content:space-between;
    gap: 12px;
  }

  .h3{
    margin: 0;
    font-size: 20px;
    letter-spacing: -0.02em;
    font-weight: 600;
  }

  .pill{
    font-size: 12px;
    padding: 6px 10px;
    border-radius: 999px;
    border: 1px solid rgba(255,255,255,.12);
    background: rgba(0,0,0,.12);
    color: rgba(255,255,255,.70);
    transition: border-color .18s ease, color .18s ease;
    white-space: nowrap;
  }

  .card:hover .pill,
  .card:focus-visible .pill{
    border-color: color-mix(in srgb, var(--accent) 55%, rgba(255,255,255,.18));
    color: rgba(255,255,255,.88);
  }

  .text{
    margin: 14px 0 0;
    color: rgba(255,255,255,.66);
    line-height: 1.75;
    font-size: 15px;
  }

  .tags{
    margin-top: 16px;
    display:flex;
    flex-wrap:wrap;
    gap: 10px;
  }

  .tag{
    font-size: 12px;
    padding: 6px 10px;
    border-radius: 999px;
    border: 1px solid rgba(255,255,255,.12);
    color: rgba(255,255,255,.70);
    background: rgba(0,0,0,.10);
  }

  /* respect reduced motion */
  @media (prefers-reduced-motion: reduce){
    .card, .card::before, .card::after, .pill{
      transition: none !important;
    }
    .card:hover, .card:focus-visible{
      transform: none;
    }
  }
</style>
