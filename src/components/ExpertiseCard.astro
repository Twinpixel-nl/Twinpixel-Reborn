---
const { title, body, tags = [] } = Astro.props;
---
<article class="card">
  <h3 class="h3">{title}</h3>
  <p class="text">{body}</p>

  <div class="tags">
    {tags.map((t) => <span class="tag">{t}</span>)}
  </div>
</article>

<style>
  .card{
    border-radius: var(--radius);
    background: rgba(255,255,255,.03);
    border: 1px solid rgba(255,255,255,.10);
    padding: 18px;
    transition: transform .14s ease, border-color .14s ease, background-color .14s ease;
  }

  .card:hover{
    transform: translateY(-2px);
    border-color: rgba(47,137,255,.45);
    background-color: rgba(47,137,255,.05);
  }

  .h3{
    margin: 0;
    font-size: 18px;
    letter-spacing: -0.02em;
    font-weight: 600;
  }

  .text{
    margin: 10px 0 0;
    color: rgba(255,255,255,.65);
    line-height: 1.7;
    font-size: 15px;
  }

  .tags{
    margin-top: 14px;
    display:flex;
    flex-wrap:wrap;
    gap: 10px;
  }

  .tag{
    font-size: 12px;
    padding: 6px 10px;
    border-radius: 999px;
    border: 1px solid rgba(255,255,255,.12);
    color: rgba(255,255,255,.72);
    background: rgba(0,0,0,.10);
  }
</style>
