---
const { title, description, tags = [], image = "", links = {} } = Astro.props;
---
<article class="card">
  <a class="thumb" href={links.case || "#"} aria-label={`${title} case`}>
    {image ? <img src={image} alt={title} loading="lazy" /> : <div class="ph" />}
  </a>

  <div class="content">
    <h3 class="h3">{title}</h3>
    <p class="text">{description}</p>

    <div class="tags">
      {tags.map((t) => <span class="tag">{t}</span>)}
    </div>

    <div class="actions">
      {links.case && <a class="link" href={links.case}>View case →</a>}
      {links.live && <a class="link" href={links.live}>Live site →</a>}
    </div>
  </div>
</article>

<style>
  .card{
    border-radius: var(--radius);
    overflow:hidden;
    background: linear-gradient(180deg, var(--card), var(--card2));
    border: 1px solid rgba(255,255,255,.10);
    box-shadow: 0 18px 55px rgba(0,0,0,.55);
    transition: transform .22s cubic-bezier(.2,.8,.2,1), box-shadow .22s ease, border-color .22s ease;
  }
  .card:hover{
    transform: translateY(-6px);
    border-color: rgba(96,165,250,.35);
    box-shadow: 0 26px 90px rgba(0,0,0,.65);
  }

  .thumb{
    display:block;
    aspect-ratio: 16 / 9;
    background: rgba(10,18,48,.6);
    position:relative;
    overflow:hidden;
  }
  img{
    width:100%;
    height:100%;
    object-fit:cover;
    transform: scale(1);
    transition: transform .35s cubic-bezier(.2,.8,.2,1);
  }
  .card:hover img{ transform: scale(1.04); }

  .ph{ width:100%; height:100%; }

  .content{ padding: 18px 18px 20px; }
  .h3{ margin: 0; font-size: 20px; letter-spacing: -0.02em; }
  .text{ margin: 10px 0 0; color: var(--muted); line-height: 1.6; font-size: 15px; }

  .tags{ margin-top: 14px; display:flex; flex-wrap:wrap; gap: 10px; }
  .tag{
    font-size: 12px;
    padding: 6px 10px;
    border-radius: 999px;
    border: 1px solid rgba(255,255,255,.12);
    background: rgba(10,18,48,.35);
    color: rgba(233,238,252,.88);
  }

  .actions{
    margin-top: 14px;
    display:flex;
    gap: 16px;
    flex-wrap:wrap;
  }
  .link{
    color: rgba(233,238,252,.90);
    border-bottom: 1px solid rgba(255,255,255,.18);
    padding-bottom: 2px;
  }
  .link:hover{
    border-bottom-color: rgba(34,211,238,.55);
  }
</style>
