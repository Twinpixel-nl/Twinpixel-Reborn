---
const { title, description, tags = [], image = "", href = "#" } = Astro.props;
---
<a class="card" href={href}>
  <div class="thumb">
    {image ? <img src={image} alt={title} loading="lazy" /> : <div class="ph"></div>}
  </div>

  <div class="body">
    <h3 class="h3">{title}</h3>
    <p class="text">{description}</p>

    <div class="tags">
      {tags.map((t) => <span class="tag">{t}</span>)}
    </div>
  </div>
</a>

<style>
  .card{
    display:block;
    border-radius: var(--radius);
    overflow:hidden;
    border: 1px solid rgba(255,255,255,.10);
    background: rgba(255,255,255,.03);
    transition: transform .14s ease, border-color .14s ease, background-color .14s ease;
  }

  .card:hover{
    transform: translateY(-2px);
    border-color: rgba(47,137,255,.45);
    background-color: rgba(47,137,255,.04);
  }

  .thumb{
    aspect-ratio: 16/9;
    background: rgba(0,0,0,.25);
  }
  img{
    width:100%;
    height:100%;
    object-fit:cover;
    transform: scale(1);
    transition: transform .25s ease;
  }
  .card:hover img{ transform: scale(1.02); }
  .ph{ width:100%; height:100%; }

  .body{ padding: 16px; }
  .h3{ margin: 0; font-size: 18px; letter-spacing: -0.02em; }
  .text{ margin: 10px 0 0; color: rgba(255,255,255,.65); line-height: 1.7; font-size: 15px; }

  .tags{ margin-top: 12px; display:flex; flex-wrap:wrap; gap: 10px; }
  .tag{
    font-size: 12px;
    padding: 6px 10px;
    border-radius: 999px;
    border: 1px solid rgba(255,255,255,.12);
    color: rgba(255,255,255,.70);
    background: rgba(0,0,0,.10);
  }
</style>
