---
import Button from "./Button.astro";
---
<header class="nav">
  <div class="container inner">
    <a class="logo" href="/" aria-label="Twinpixel home">
      <img src="/logo.png" alt="Twinpixel logo" />
    </a>

    <nav class="menu" aria-label="Main navigation">
      <a href="/" class="active">Home</a>
      <a href="/expertise">Expertise</a>
      <a href="/cases">Cases</a>
      <a href="/over-ons">Over ons</a>
    </nav>

    <div class="cta">
      <Button href="/contact" variant="primary" label="Plan kennismaking" />
    </div>
  </div>
</header>

<style>
  .nav{
    position: sticky;
    top: 0;
    z-index: 50;
    background: rgba(5,6,10,.75);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(255,255,255,.08);
  }

  .inner{
    height: 72px;
    display:flex;
    align-items:center;
    justify-content:space-between;
    gap: 18px;
  }

  .logo{
    display:flex;
    align-items:center;
    min-width: 140px;
  }
  .logo img{ height: 32px; width:auto; }

  .menu{
    display:flex;
    gap: 28px;
    justify-content:center;
    flex: 1;
  }

  .menu a{
    color: rgba(255,255,255,.70);
    font-size: 14px;
    letter-spacing: .02em;
    padding: 10px 2px;
    position: relative;
    transition: color .14s ease;
  }
  .menu a:hover{ color: rgba(255,255,255,.92); }

  /* ACTIVE: 1px underline, strak op baseline */
  .menu a::after{
    content:"";
    position:absolute;
    left:0; right:0;
    bottom: 6px;
    height: 1px;
    background: var(--brand);
    opacity: 0;
    transform: scaleX(0);
    transform-origin: left;
    transition: opacity .14s ease, transform .18s ease;
  }
  .menu a.active{ color: rgba(255,255,255,.95); }
  .menu a.active::after{
    opacity: 1;
    transform: scaleX(1);
  }

  @media (max-width: 820px){
    .menu{ display:none; }
  }
</style>
