---
import SectionHeader from "./SectionHeader.astro";
import ExpertiseCard from "./ExpertiseCard.astro";

const cards = [
  {
    title: "Brand Basis",
    body: "Een sterke visuele basis met logo, kleur en typografie. Duidelijk, herkenbaar en klaar voor web.",
    tags: ["Logo", "Merkstijl", "Styleguide"],
    href: "/expertise/brand-basis",
    variant: "purple",
  },
  {
    title: "Website Launch",
    body: "Marketing websites die vertrouwen opbouwen en gericht zijn op aanvragen. Snel, logisch en conversiegericht.",
    tags: ["CMS", "SEO-structuur", "Leadflow"],
    href: "/expertise/website-launch",
    variant: "blue",
  },
  {
    title: "Technical Build",
    body: "Maatwerk frontends, tools en integraties. Performance-first en onderhoudbaar opgebouwd.",
    tags: ["Integraties", "Webapplicaties", "Performance"],
    href: "/expertise/technical-build",
    variant: "cyan",
  },
];
---

<section class="section" id="expertise">
  <div class="container">
    <SectionHeader
      title="Expertise"
      subtitle="Drie duidelijke trajecten. Van merkbasis tot maatwerkplatform."
    />

    <div class="grid-3 big">
      {cards.map((c) => (
        <ExpertiseCard
          title={c.title}
          body={c.body}
          tags={c.tags}
          href={c.href}
          variant={c.variant}
        />
      ))}
    </div>
  </div>

  <style>
    .container {
      width: min(1100px, calc(100% - 2rem));
      margin: 0 auto;
    }

    .big {
      gap: 22px;
    }
  </style>
</section>
