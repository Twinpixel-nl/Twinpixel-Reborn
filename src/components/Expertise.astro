---
import SectionHeader from "./SectionHeader.astro";
import ExpertiseCard from "./ExpertiseCard.astro";

const cards = [
  {
    title: "Branding",
    body: "Visual identity, tone of voice en een design system dat overal klopt.",
    tags: ["Logo", "Identity", "Design system"],
    href: "/expertise",
    variant: "purple"
  },
  {
    title: "Standard Websites",
    body: "Snelle marketing sites en landingspagina’s die vertrouwen wekken en converteren.",
    tags: ["Landing pages", "CMS", "Conversion"],
    href: "/expertise",
    variant: "blue"
  },
  {
    title: "Technical Websites",
    body: "Custom front-ends, integraties en complexe flows — strak en onderhoudbaar.",
    tags: ["Integrations", "Web apps", "Performance"],
    href: "/expertise",
    variant: "cyan"
  }
];
---
<section class="section" id="work">
  <div class="container">
    <SectionHeader
      title="expertise"
      subtitle="drie kerngebieden. klik door voor details, aanpak en voorbeelden."
    />

    <div class="grid-3 big">
      {cards.map((c) => (
        <ExpertiseCard
          title={c.title}
          body={c.body}
          tags={c.tags}
          href={c.href}
          variant={c.variant}
        />
      ))}
    </div>
  </div>

  <style>
    /* groter grid gevoel */
    .big{
      gap: 22px;
    }
  </style>
</section>
