---
const {
  brand = "TwinPixel",
  location = "Wageningen, NL",
  email = "info@twinpixel.nl",
  instagram = "https://www.instagram.com/twinpixel.nl/",
  facebook = "https://www.facebook.com/people/Twinpixel/61574036669497/",
  linkedin = "https://www.linkedin.com/company/106384999/admin/dashboard/",
} = Astro.props;
---
<footer class="footer" aria-label="Footer">
  <div class="footer-inner">
    <div class="footer-main">
      <div class="footer-brand">
        <img src="/logo.png" alt="TwinPixel Logo" class="footer-logo" />
        <div class="brand-info">
          <p class="brand-tagline">Websites die er strak uitzien en snel laden.</p>
        </div>
      </div>

      <div class="footer-links">
        <div class="footer-section">
          <h4 class="section-title">Navigatie</h4>
          <nav class="footer-nav" aria-label="Footer navigation">
            <a href="/">Home</a>
            <a href="/cases">Cases</a>
            <a href="/expertise">Expertise</a>
            <a href="/contact">Contact</a>
          </nav>
        </div>

        <div class="footer-section">
          <h4 class="section-title">Contact</h4>
          <div class="contact-info">
            <span>{location}</span>
            <a class="contact-link" href={`mailto:${email}`}>{email}</a>
          </div>
        </div>

        <div class="footer-section">
          <h4 class="section-title">Volg ons</h4>
          <div class="social-links" aria-label="Social links">
            <a class="social-link" href={instagram} target="_blank" rel="noreferrer" aria-label="Instagram">
              <svg viewBox="0 0 24 24" aria-hidden="true">
                <rect x="2" y="2" width="20" height="20" rx="5" ry="5" fill="none" stroke="currentColor" stroke-width="1.5"/>
                <circle cx="12" cy="12" r="3.5" fill="none" stroke="currentColor" stroke-width="1.5"/>
                <circle cx="17.5" cy="6.5" r="1" fill="currentColor"/>
              </svg>
            </a>

            <a class="social-link" href={facebook} target="_blank" rel="noreferrer" aria-label="Facebook">
              <svg viewBox="0 0 24 24" aria-hidden="true">
                <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z" fill="currentColor"/>
              </svg>
            </a>

            <a class="social-link" href={linkedin} target="_blank" rel="noreferrer" aria-label="LinkedIn">
              <svg viewBox="0 0 24 24" aria-hidden="true">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" fill="currentColor"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <div class="footer-copyright">
        <span>© {new Date().getFullYear()} TwinPixel</span>
        <span class="separator">·</span>
        <span>Built with Astro</span>
      </div>
    </div>
  </div>

  <style>
    .footer {
      margin-top: 4rem;
      padding: 3rem 0 2rem;
      border-top: 1px solid rgba(255,255,255,0.1);
      background: rgba(0,0,0,0.02);
    }

    .footer-inner {
      width: min(1200px, calc(100% - 2rem));
      margin: 0 auto;
    }

    .footer-main {
      display: grid;
      grid-template-columns: 1.5fr 2.5fr;
      gap: 3rem;
      margin-bottom: 2.5rem;
    }

    .footer-brand {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
      justify-self: start;
    }

    .footer-logo {
      width: 200px;
    }

    .brand-info {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .brand-name {
      font-size: 1.4rem;
      font-weight: 600;
      color: #fff;
      margin: 0;
    }

    .brand-tagline {
      font-size: 0.95rem;
      color: rgba(255,255,255,0.7);
      margin: 0;
      line-height: 1.5;
      max-width: 300px;
    }

    .footer-links {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
      gap: 2.5rem;
    }

    .footer-section {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .section-title {
      font-size: 1rem;
      font-weight: 600;
      color: #fff;
      margin: 0;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .footer-nav {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .footer-nav a {
      color: rgba(255,255,255,0.8);
      text-decoration: none;
      font-size: 0.9rem;
      transition: color 0.2s ease;
    }

    .footer-nav a:hover {
      color: #2F89FF;
    }

    .contact-info {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .contact-info span,
    .contact-link {
      color: rgba(255,255,255,0.8);
      font-size: 0.9rem;
      text-decoration: none;
      transition: color 0.2s ease;
    }

    .contact-link:hover {
      color: #2F89FF;
    }

    .social-links {
      display: flex;
      gap: 1rem;
      align-items: center;
    }

    .social-link {
      width: 40px;
      height: 40px;
      border-radius: 8px;
      border: 1px solid rgba(255,255,255,0.2);
      background: rgba(255,255,255,0.05);
      display: grid;
      place-items: center;
      text-decoration: none;
      transition: all 0.2s ease;
      color: rgba(255,255,255,0.7);
    }

    .social-link:hover {
      border-color: #2F89FF;
      background: rgba(47,137,255,0.1);
      color: #2F89FF;
      transform: translateY(-2px);
    }

    .social-link svg {
      width: 20px;
      height: 20px;
    }

    .footer-bottom {
      padding-top: 2rem;
      border-top: 1px solid rgba(255,255,255,0.08);
      text-align: center;
    }

    .footer-copyright {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.75rem;
      flex-wrap: wrap;
      color: rgba(255,255,255,0.6);
      font-size: 0.85rem;
    }

    .separator {
      opacity: 0.4;
    }

    @media (max-width: 1024px) {
      .footer-main {
        grid-template-columns: 1fr;
        gap: 2.5rem;
      }

      .footer-links {
        grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
        gap: 2rem;
      }
    }

    @media (max-width: 768px) {
      .footer {
        margin-top: 3rem;
        padding: 2.5rem 0 1.5rem;
      }

      .footer-main {
        gap: 2rem;
        margin-bottom: 2rem;
      }

      .footer-logo {
        width: 120px;
        height: 120px;
      }

      .brand-name {
        font-size: 1.2rem;
      }

      .footer-links {
        grid-template-columns: 1fr;
        gap: 2rem;
      }

      .social-links {
        justify-content: center;
      }

      .footer-copyright {
        flex-direction: column;
        gap: 0.5rem;
      }
    }

    @media (max-width: 480px) {
      .footer {
        padding: 2rem 0 1rem;
      }

      .footer-main {
        gap: 1.5rem;
        margin-bottom: 1.5rem;
      }

      .footer-logo {
        width: 100px;
        height: 100px;
      }

      .brand-name {
        font-size: 1.1rem;
      }

      .section-title {
        font-size: 0.9rem;
      }

      .social-links {
        gap: 0.75rem;
      }

      .social-link {
        width: 36px;
        height: 36px;
      }

      .social-link svg {
        width: 18px;
        height: 18px;
      }
    }
  </style>
</footer>
