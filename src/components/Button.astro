---
const {
  href = "#",
  variant = "primary", // primary | secondary
  label = "Button",
  icon = false
} = Astro.props;
---
<a class={`btn ${variant}`} href={href}>
  <span class="label">{label}</span>
  {icon && <span class="arrow">â†’</span>}
</a>
<style>
  .btn{
    --accent: #2F89FF;

    position: relative;
    display:inline-flex;
    align-items:center;
    gap:10px;

    padding: 14px 26px;
    border-radius: 999px;

    font-weight: 500;
    font-size: 15px;
    letter-spacing: .01em;

    background: linear-gradient(
      180deg,
      rgba(47,137,255,.22),
      rgba(47,137,255,.12)
    );
    color: var(--text);

    border: 1px solid rgba(47,137,255,.35);
    backdrop-filter: blur(6px);

    transition:
      transform .18s ease,
      background .18s ease,
      border-color .18s ease;
  }

  /* subtiele highlight-lijn */
  .btn::after{
    content:"";
    position:absolute;
    left:18px;
    right:18px;
    bottom:6px;
    height:1px;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(47,137,255,.8),
      transparent
    );
    opacity:.45;
    transition: opacity .18s ease;
  }

  .btn:hover{
    transform: translateY(-1px);
    background: linear-gradient(
      180deg,
      rgba(47,137,255,.32),
      rgba(47,137,255,.18)
    );
    border-color: rgba(47,137,255,.6);
  }

  .btn:hover::after{
    opacity:.85;
  }

  /* secondary: cleaner, almost flat */
  .secondary{
    background: rgba(255,255,255,.03);
    border-color: rgba(255,255,255,.10);
  }

  .secondary::after{
    display:none;
  }
</style>
