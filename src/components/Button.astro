---
const {
  href = "#",
  variant = "primary", // primary | secondary
  label = "Button",
  icon = false
} = Astro.props;
---
<a class={`btn ${variant}`} href={href}>
  <span>{label}</span>
  {icon && <span class="arrow" aria-hidden="true">â†’</span>}
</a>

<style>
  .btn{
    display:inline-flex;
    align-items:center;
    gap:12px;
    padding: 14px 22px;
    border-radius: 999px;
    font-weight: 600;
    letter-spacing: .01em;
    border: 1px solid transparent;
    transition: transform .18s ease, box-shadow .18s ease, background .18s ease, border-color .18s ease;
    user-select:none;
  }
  .btn:focus-visible{
    outline: 3px solid rgba(96,165,250,.45);
    outline-offset: 3px;
  }

  .primary{
    background: rgba(96,165,250,.90);
    color: #071027;
    box-shadow: 0 18px 50px rgba(96,165,250,.18);
  }
  .primary:hover{
    transform: translateY(-1px);
    box-shadow: 0 22px 70px rgba(34,211,238,.20);
    background: rgba(96,165,250,.98);
  }

  .secondary{
    background: rgba(10,18,48,.35);
    border-color: rgba(255,255,255,.14);
    color: rgba(233,238,252,.90);
  }
  .secondary:hover{
    transform: translateY(-1px);
    border-color: rgba(96,165,250,.35);
    box-shadow: 0 22px 70px rgba(0,0,0,.45);
  }

  .arrow{ font-size: 18px; line-height: 1; opacity:.9; }
</style>
