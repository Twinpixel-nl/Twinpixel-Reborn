---
import Button from "./Button.astro";
---
<section class="hero" id="top">
  <div class="container wrap">
    <div class="left">
      <p class="kicker">webdesign & development — wageningen</p>

      <h1 class="h1">
        Strakke websites die vertrouwen wekken
        <span class="dot">.</span>
      </h1>

      <p class="lead">
        Twinpixel ontwerpt en bouwt snelle websites met een premium uitstraling.
        Duidelijke structuur, sterke content en een SEO-basis die klopt.
      </p>

      <div class="cta">
        <Button href="/portfolio" variant="primary" label="Bekijk portfolio" />
        <Button href="#contact" variant="secondary" label="Plan kennismaking" />
      </div>

      <div class="proof" aria-label="Key points">
        <span>Performance-first</span>
        <span class="sep">•</span>
        <span>SEO-ready</span>
        <span class="sep">•</span>
        <span>Clean design</span>
      </div>
    </div>

    <div class="right">
      <div class="panel">
        <div class="row">
          <span class="label">Focus</span>
          <span class="value">Design • Snelheid • SEO</span>
        </div>
        <div class="row">
          <span class="label">Stack</span>
          <span class="value">Astro • Static-first • Clean code</span>
        </div>
        <div class="row">
          <span class="label">Werkgebied</span>
          <span class="value">Wageningen & omgeving</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero{ padding: 140px 0 80px; }

  .wrap{
    display:grid;
    grid-template-columns: 1.2fr .8fr;
    gap: 34px;
    align-items:start;
  }

  .kicker{
    margin: 0 0 14px;
    font-size: 12px;
    letter-spacing: .14em;
    text-transform: uppercase;
    color: rgba(255,255,255,.52);
  }

  .h1{
    margin: 0;
    font-size: clamp(40px, 4.8vw, 68px);
    line-height: 1.03;
    letter-spacing: -0.045em;
    font-weight: 650;
  }

  .dot{ color: var(--brand); }

  .lead{
    margin: 18px 0 0;
    max-width: 58ch;
    color: rgba(255,255,255,.68);
    font-size: 18px;
    line-height: 1.75;
  }

  .cta{
    margin-top: 26px;
    display:flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .proof{
    margin-top: 26px;
    display:flex;
    flex-wrap: wrap;
    gap: 12px;
    color: rgba(255,255,255,.52);
    font-size: 14px;
  }
  .sep{ opacity: .35; }

  .panel{
    border-radius: var(--radius);
    background: rgba(255,255,255,.03);
    border: 1px solid rgba(255,255,255,.10);
    padding: 18px;
  }

  .row{
    padding: 14px 0;
    border-bottom: 1px solid rgba(255,255,255,.08);
  }
  .row:last-child{ border-bottom: 0; }

  .label{
    display:block;
    font-size: 11px;
    letter-spacing: .14em;
    text-transform: uppercase;
    color: rgba(255,255,255,.48);
  }
  .value{
    display:block;
    margin-top: 6px;
    font-size: 14px;
    color: rgba(255,255,255,.85);
  }

  @media (max-width: 980px){
    .wrap{ grid-template-columns: 1fr; }
    .hero{ padding: 120px 0 70px; }
  }
</style>
