<button
  id="hamburger-btn"
  class="hamburger"
  type="button"
  aria-label="Toggle menu"
  aria-expanded="false"
>
  <span class="bar bar-1"></span>
  <span class="bar bar-2"></span>
  <span class="bar bar-3"></span>
</button>

<style>
  .hamburger{
    width: 32px;
    height: 24px;
    display: inline-block;
    position: relative;
    background: transparent;
    border: 0;
    padding: 0;
    cursor: pointer;
  }

  .bar{
    position: absolute;
    left: 0;
    width: 100%;
    height: 3px;
    border-radius: 999px;
    background: var(--text, #fff);
    transition: transform .25s ease, opacity .2s ease, background-color .2s ease;
  }

  .bar-1{ top: 0; }
  .bar-2{ top: 50%; transform: translateY(-50%); }
  .bar-3{ bottom: 0; }

  .hamburger:hover .bar{
    background: var(--brand);
  }

  /* kruis */
  .hamburger[aria-expanded="true"] .bar-1{
    transform: translateY(10.5px) rotate(45deg);
  }
  .hamburger[aria-expanded="true"] .bar-2{
    opacity: 0;
  }
  .hamburger[aria-expanded="true"] .bar-3{
    transform: translateY(-10.5px) rotate(-45deg);
  }

  @media (min-width: 900px){
    .hamburger{ display: none; }
  }
</style>
