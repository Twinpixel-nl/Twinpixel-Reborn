---
import BaseLayout from "../layouts/BaseLayout.astro";

const path = Astro.url.pathname || "/";
const isEN = path.startsWith("/en/");
const lang: "nl" | "en" = isEN ? "en" : "nl";

const title = !isEN ? "Pagina niet gevonden | TwinPixel" : "Page not found | TwinPixel";
const desc = !isEN
  ? "De pagina die je zoekt bestaat niet (404)."
  : "The page you’re looking for doesn’t exist (404).";

const homeHref = !isEN ? "/" : "/en/";
---

<BaseLayout
  title={title}
  description={desc}
  lang={lang}
  canonical={path}
  noindex={true}
  alternates={!isEN ? { nl: "/" } : undefined}
  xDefaultAlternate="/"
>
  <section class="section">
    <h1 class="text-3xl md:text-4xl font-semibold mb-4">
      {!isEN ? "Pagina niet gevonden" : "Page not found"}
    </h1>
    <p class="prose text-slate-300">
      {!isEN
        ? "De pagina die je zoekt bestaat niet of is verplaatst."
        : "The page you’re looking for doesn’t exist or has moved."}
    </p>
    <div class="mt-6">
      <a class="btn-primary" href={homeHref}>
        {!isEN ? "Terug naar home" : "Back to home"}
      </a>
    </div>
  </section>
</BaseLayout>
