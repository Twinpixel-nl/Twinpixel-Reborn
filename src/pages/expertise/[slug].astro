---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Button from "../../components/Button.astro";
import { expertiseItems } from "../../data/expertise";

export function getStaticPaths() {
  return expertiseItems.map((x) => ({ params: { slug: x.slug } }));
}

const { slug } = Astro.params;
const item = expertiseItems.find((x) => x.slug === slug);
if (!item) throw new Error(`Unknown expertise slug: ${slug}`);

const extras = {
  branding: {
    examples: [
      {
        title: "Scale-up Rebrand",
        summary: "Merktaal, design system en webdesign voor een B2B SaaS, inclusief templates voor sales.",
      },
      {
        title: "Agency Merk Kit",
        summary: "Logo-refresh, UI kit en tone-of-voice gids zodat alle kanalen consistent zijn.",
      },
      {
        title: "Founders Deck + Site",
        summary: "Look & feel, typografie en componenten die direct toepasbaar zijn in slides en website.",
      },
    ],
    faq: [
      { q: "Hoe snel kunnen we live?", a: "First draft in 1-2 weken, volledige kit in 3-4 weken afhankelijk van feedback." },
      { q: "Leveren jullie ook assets?", a: "Ja: logo files, kleur/typografie richtlijnen, UI componenten en social templates." },
      { q: "Hoe zorgen jullie voor consistentie?", a: "We documenteren keuzes in een mini styleguide en leveren herbruikbare componenten." },
    ],
  },
  "standard-websites": {
    examples: [
      {
        title: "Marketing Site + Landingspagina",
        summary: "Homepage, diensten en campagnepagina's met heldere flow en SEO-basics.",
      },
      {
        title: "Lead Funnel",
        summary: "CTA-structuur, formulieren, dankpagina's en interne links voor hogere conversie.",
      },
      {
        title: "SEO Foundations",
        summary: "Titles, headings, structured content en technische checks voor snelle indexing.",
      },
    ],
    faq: [
      { q: "Wat is de doorlooptijd?", a: "Ontwerp en build in 3-5 weken, afhankelijk van content die je aanlevert." },
      { q: "Optimaliseren jullie voor snelheid?", a: "Ja, we bouwen performance-first (Astro), meten Core Web Vitals en optimaliseren assets." },
      { q: "Regelen jullie ook content?", a: "We helpen met structuur en microcopy; voor grote copy-trajecten werken we met een copywriter." },
    ],
  },
  "technical-websites": {
    examples: [
      {
        title: "Portaal of Dashboard",
        summary: "Custom flows, filters en dataweergave die intuïtief blijven voor eindgebruikers.",
      },
      {
        title: "Integraties",
        summary: "CRM, formulieren, analytics en automatisering, met duidelijke foutafhandeling.",
      },
      {
        title: "Component-architectuur",
        summary: "Schaalbare UI-componenten met tests/checks zodat teams sneller kunnen itereren.",
      },
    ],
    faq: [
      { q: "Hoe pakken jullie complexiteit aan?", a: "We starten met een flow-inventarisatie, definiëren states en valideren met wireframes." },
      { q: "Welke stack gebruiken jullie?", a: "Front-end met Astro/React waar nodig, API-koppelingen op basis van bestaande back-ends." },
      { q: "Doen jullie QA?", a: "Ja, we testen flows, accessibility en performance voordat we opleveren." },
    ],
  },
};

const currentExtras = extras[item.slug] ?? { examples: [], faq: [] };
---

<BaseLayout title={`Twinpixel | ${item.title}`} description={item.intro}>
  <section class:list={["band", item.chipClass]} style={`--accent:${item.accent};`}>
    <div class="container band-inner">
      <div class="left">
        <p class="kicker">Expertise</p>
        <h1 class="h2">{item.title}</h1>
        <p class="p">{item.intro}</p>

        <div class="blocks">
          <div class="block">
            <h2 class="sub">Wat Je Krijgt</h2>
            <ul class="list">
              {item.whatYouGet.map((li) => <li>{li}</li>)}
            </ul>
          </div>

          <div class="block">
            <h2 class="sub">Aanpak</h2>
            <div class="steps">
              {item.steps.map((s) => (
                <div class="step">
                  <span class="nr">{s.nr}</span>
                  <p>{s.text}</p>
                </div>
              ))}
            </div>
          </div>

          <!-- NIEUW: KOSTEN SECTIE -->
          <div class="block investment">
            <h2 class="sub">Investering</h2>
            <div class="cost-card">
              <div class="cost-content">
                <p class="cost-price">Vanaf <span class="amount" style={`color: var(--accent)`}>{item.costs.price}</span></p>
                <p class="cost-desc">{item.costs.description}</p>
              </div>
              <ul class="cost-features">
                {item.costs.features.map(f => (
                  <li>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="var(--accent)" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                    {f}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>

        {currentExtras.examples.length > 0 && (
          <div class="examples">
            <h2 class="sub">Voorbeelden</h2>
            <div class="example-grid">
              {currentExtras.examples.map((ex) => (
                <div class="example-card">
                  <p class="ex-title">{ex.title}</p>
                  <p class="ex-text">{ex.summary}</p>
                </div>
              ))}
            </div>
          </div>
        )}

        {currentExtras.faq.length > 0 && (
          <div class="faq">
            <h2 class="sub">Veelgestelde Vragen</h2>
            <div class="faq-list">
              {currentExtras.faq.map((f) => (
                <div class="faq-item">
                  <p class="faq-q">{f.q}</p>
                  <p class="faq-a">{f.a}</p>
                </div>
              ))}
            </div>
          </div>
        )}

        <div class="actions">
          <Button href="/cases" variant="primary" label="Bekijk Cases" />
          <Button href="/contact" variant="secondary" label="Plan Kennismaking" />
        </div>

        <div class="back">
          <a class="backlink" href="/expertise">← Terug Naar Expertise</a>
        </div>
      </div>

      <div class="right">
        <div class="panel">
          {item.panel.map((p) => (
            <>
              <p class="label">{p.label}</p>
              <p class="value">{p.value}</p>
            </>
          ))}
        </div>

        <div class="sidepanel" aria-label="Andere expertise">
          <p class="label">Andere Expertise</p>
          <div class="side-links">
            {expertiseItems
              .filter((x) => x.slug !== item.slug)
              .map((x) => (
                <a class="side-link" href={`/expertise/${x.slug}`}>
                  {x.title}
                </a>
              ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <style>
    /* accents */
    .purple{ --accent:#7c3aed; }
    .blue{ --accent:#2F89FF; }
    .cyan{ --accent:#22c55e; }

    .band{
      padding: 140px 0;
      position: relative;
      overflow: hidden;
    }

    .band::after{
      content:"";
      position:absolute;
      inset:-200px -120px;
      pointer-events:none;
      background:
        radial-gradient(
          900px 520px at 30% 20%,
          color-mix(in srgb, var(--accent) 22%, transparent),
          transparent 65%
        ),
        radial-gradient(
          700px 420px at 80% 60%,
          color-mix(in srgb, var(--accent) 14%, transparent),
          transparent 70%
        );
      opacity: .85;
    }

    .investment {
    margin-top: 10px;
  }

  .cost-card {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 24px;
    padding: 24px;
    border-radius: var(--radius);
    background: rgba(255,255,255,.025);
    border: 1px solid rgba(255,255,255,.08);
    align-items: center;
  }

  .cost-price {
    margin: 0;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgba(255,255,255,0.5);
  }

  .amount {
    display: block;
    font-size: 32px;
    font-weight: 700;
    letter-spacing: -0.02em;
    margin-top: 4px;
  }

  .cost-desc {
    margin: 12px 0 0;
    font-size: 14px;
    line-height: 1.5;
    color: rgba(255,255,255,0.7);
    max-width: 30ch;
  }

  .cost-features {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 10px;
  }

  .cost-features li {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 14px;
    color: rgba(255,255,255,0.8);
  }

  @media (max-width: 600px) {
    .cost-card {
      grid-template-columns: 1fr;
      gap: 20px;
    }
  }
    .band-inner{
      display:grid;
      grid-template-columns: 1.3fr .7fr;
      gap: 48px;
      align-items:start;
      position: relative;
      z-index: 1;
    }

    .band-inner::before{
      content:"";
      position:absolute;
      left:0;
      top:-18px;
      width: 56px;
      height: 2px;
      border-radius: 2px;
      background: var(--accent);
      opacity: .9;
    }

    .kicker{
      margin:0 0 10px;
      font-size: 12px;
      letter-spacing: .14em;
      text-transform: uppercase;
      color: rgba(255,255,255,.50);
    }

    .h2{
      font-size: clamp(34px, 4vw, 52px);
      letter-spacing: -0.04em;
      line-height: 1.05;
      margin: 0;
    }

    .p{
      font-size: 18px;
      line-height: 1.8;
      max-width: 70ch;
      margin-top: 14px;
      color: rgba(255,255,255,.72);
    }

    .blocks{
      margin-top: 28px;
      display:flex;
      flex-direction:column;
      gap: 26px;
    }

    .sub{
      margin: 0 0 14px;
      font-size: 12px;
      letter-spacing: .14em;
      text-transform: uppercase;
      color: rgba(255,255,255,.55);
    }

    .list{
      margin: 0;
      padding-left: 18px;
      color: rgba(255,255,255,.70);
      line-height: 1.9;
      font-size: 15px;
    }

    .steps{
      display:grid;
      grid-template-columns: repeat(3, minmax(0,1fr));
      gap: 18px;
    }

    .step{
      padding: 18px;
      border-radius: var(--radius);
      background: rgba(255,255,255,.025);
      border: 1px solid rgba(255,255,255,.08);
    }

    .nr{
      display:block;
      font-size: 12px;
      letter-spacing: .12em;
      color: var(--accent);
      margin-bottom: 8px;
    }

    .step p{
      margin: 0;
      color: rgba(255,255,255,.72);
      line-height: 1.6;
      font-size: 14px;
    }

    .examples{
      margin-top: 30px;
    }
    .example-grid{
      display:grid;
      grid-template-columns: repeat(3, minmax(0,1fr));
      gap: 14px;
    }
    .example-card{
      border-radius: var(--radius);
      border: 1px solid rgba(255,255,255,.10);
      background: rgba(255,255,255,.02);
      padding: 14px 14px 16px;
      display:grid;
      gap: 8px;
    }
    .ex-title{
      margin: 0;
      font-weight: 650;
      color: rgba(255,255,255,.90);
    }
    .ex-text{
      margin: 0;
      color: rgba(255,255,255,.72);
      line-height: 1.6;
      font-size: 14px;
    }

    .faq{
      margin-top: 30px;
    }
    .faq-list{
      display:grid;
      gap: 10px;
    }
    .faq-item{
      border-radius: var(--radius);
      border: 1px solid rgba(255,255,255,.08);
      background: rgba(255,255,255,.02);
      padding: 14px 14px 12px;
    }
    .faq-q{
      margin: 0 0 6px;
      font-weight: 650;
      color: rgba(255,255,255,.90);
    }
    .faq-a{
      margin: 0;
      color: rgba(255,255,255,.70);
      line-height: 1.6;
      font-size: 14px;
    }

    .actions{
      margin-top: 26px;
      display:flex;
      gap: 12px;
      flex-wrap: wrap;
    }

    .panel{
      border-radius: var(--radius);
      background: rgba(255,255,255,.025);
      border: 1px solid rgba(255,255,255,.08);
      padding: 28px;
      position: relative;
      transition: border-color .14s ease;
    }

    .panel::before{
      content:"";
      position:absolute;
      inset:-1px;
      border-radius: inherit;
      pointer-events:none;
      box-shadow: inset 0 0 0 1px color-mix(in srgb, var(--accent) 22%, transparent);
      opacity:.35;
    }

    .label{
      margin: 0;
      font-size: 11px;
      letter-spacing: .14em;
      text-transform: uppercase;
      color: rgba(255,255,255,.48);
    }

    .value{
      margin: 8px 0 16px;
      color: rgba(255,255,255,.82);
      line-height: 1.6;
      font-size: 14px;
    }
    .value:last-child{ margin-bottom: 0; }

    .sidepanel{
      margin-top: 14px;
      border-radius: var(--radius);
      background: rgba(255,255,255,.015);
      border: 1px solid rgba(255,255,255,.07);
      padding: 18px;
    }
    .side-links{
      margin-top: 10px;
      display:flex;
      flex-direction:column;
      gap: 10px;
    }
    .side-link{
      text-decoration:none;
      color: rgba(255,255,255,.78);
      border: 1px solid rgba(255,255,255,.10);
      background: rgba(255,255,255,.02);
      padding: 10px 12px;
      border-radius: 12px;
      transition: border-color .14s ease, background-color .14s ease;
    }
    .side-link:hover{
      border-color: rgba(255,255,255,.22);
      background: rgba(255,255,255,.045);
    }

    .back{ margin-top: 22px; }
    .backlink{
      color: rgba(255,255,255,.62);
      text-decoration:none;
      border-bottom: 1px solid rgba(255,255,255,.18);
      padding-bottom: 2px;
    }
    .backlink:hover{ color: rgba(255,255,255,.78); border-bottom-color: rgba(255,255,255,.32); }

    @media (max-width: 980px){
      .band-inner{ grid-template-columns: 1fr; gap: 26px; }
      .steps{ grid-template-columns: 1fr; }
      .example-grid{ grid-template-columns: 1fr; }
    }
  </style>
</BaseLayout>
