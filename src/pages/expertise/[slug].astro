      margin-bottom: 8px;
    }

    .step p{
      margin: 0;
      color: rgba(255,255,255,.72);
      line-height: 1.6;
      font-size: 14px;
    }

    .examples{
      margin-top: 30px;
    }
    .example-grid{
      display:grid;
      grid-template-columns: repeat(3, minmax(0,1fr));
      gap: 14px;
    }
    .example-card{
      border-radius: var(--radius);
      border: 1px solid rgba(255,255,255,.10);
      background: rgba(255,255,255,.02);
      padding: 14px 14px 16px;
      display:grid;
      gap: 8px;
    }
    .ex-title{
      margin: 0;
      font-weight: 650;
      color: rgba(255,255,255,.90);
    }
    .ex-text{
      margin: 0;
      color: rgba(255,255,255,.72);
      line-height: 1.6;
      font-size: 14px;
    }

    .faq{
      margin-top: 30px;
    }
    .faq-list{
      display:grid;
      gap: 10px;
    }
    .faq-item{
      border-radius: var(--radius);
      border: 1px solid rgba(255,255,255,.08);
      background: rgba(255,255,255,.02);
      padding: 14px 14px 12px;
    }
