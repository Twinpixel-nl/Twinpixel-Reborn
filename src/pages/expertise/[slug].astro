---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Button from "../../components/Button.astro";
import { expertiseItems } from "../../data/expertise";

type ExtraExample = { title: string; summary: string };
type ExtraFaq = { q: string; a: string };
type Extras = { examples: ExtraExample[]; faq: ExtraFaq[] };

export function getStaticPaths() {
  return expertiseItems.map((x) => ({ params: { slug: x.slug } }));
}

const { slug } = Astro.params;
const item = expertiseItems.find((x) => x.slug === slug);

if (!item) {
  // nette 404 ipv build-crash (werkt in Astro)
  return Astro.redirect("/404");
}

const extras: Record<string, Extras> = {
  "brand-basis": {
    examples: [
      {
        title: "Scale-up Rebrand",
        summary:
          "Merktaal, design system en webdesign voor een B2B SaaS, inclusief templates voor sales.",
      },
      {
        title: "Agency Merk Kit",
        summary:
          "Logo-refresh, UI kit en tone-of-voice gids zodat alle kanalen consistent zijn.",
      },
      {
        title: "Founders Deck + Site",
        summary:
          "Look & feel, typografie en componenten die direct toepasbaar zijn in slides en website.",
      },
    ],
    faq: [
      {
        q: "Hoe snel kunnen we live?",
        a: "Eerste versie binnen 1–2 weken. Volledige kit in 3–4 weken, afhankelijk van feedback.",
      },
      {
        q: "Leveren jullie ook assets?",
        a: "Ja: logo exports, kleur/typografie richtlijnen, UI-componenten en (optioneel) social templates.",
      },
      {
        q: "Hoe zorgen jullie voor consistentie?",
        a: "We leggen keuzes vast in een mini-styleguide en leveren herbruikbare componenten/regels.",
      },
    ],
  },

  "website-launch": {
    examples: [
      {
        title: "Marketing Site + Landingspagina",
        summary:
          "Homepage, diensten en campagnepagina’s met heldere flow en SEO-basis.",
      },
      {
        title: "Leadflow",
        summary:
          "CTA-structuur, formulieren, dankpagina’s en interne links voor hogere conversie.",
      },
      {
        title: "SEO Foundations",
        summary:
          "Titels, headings, content-structuur en technische checks voor snelle indexatie.",
      },
    ],
    faq: [
      {
        q: "Wat is de doorlooptijd?",
        a: "Meestal 3–5 weken. Content en feedback bepalen het tempo.",
      },
      {
        q: "Optimaliseren jullie voor snelheid?",
        a: "Ja. We bouwen performance-first (Astro), meten Core Web Vitals en optimaliseren assets.",
      },
      {
        q: "Regelen jullie ook content?",
        a: "We helpen met structuur en microcopy. Voor grotere copy-trajecten schakelen we (optioneel) een copywriter in.",
      },
    ],
  },

  "technical-build": {
    examples: [
      {
        title: "Portaal of Dashboard",
        summary:
          "Custom flows, filters en dataweergave die intuïtief blijven voor eindgebruikers.",
      },
      {
        title: "Integraties",
        summary:
          "CRM, formulieren, analytics en automatisering, met duidelijke foutafhandeling.",
      },
      {
        title: "Component-architectuur",
        summary:
          "Schaalbare UI-componenten met checks zodat teams sneller kunnen itereren.",
      },
    ],
    faq: [
      {
        q: "Hoe pakken jullie complexiteit aan?",
        a: "We starten met flow-inventarisatie, definiëren states en valideren met wireframes.",
      },
      {
        q: "Welke stack gebruiken jullie?",
        a: "Front-end met Astro (en React waar nodig), met API-koppelingen op bestaande back-ends.",
      },
      {
        q: "Doen jullie QA?",
        a: "Ja. We testen flows, toegankelijkheid en performance vóór oplevering.",
      },
    ],
  },
};

const currentExtras: Extras = extras[item.slug] ?? { examples: [], faq: [] };
const pricePrefix = item.costs.isStartingAt === false ? "" : "Vanaf ";
---

<BaseLayout title={`Twinpixel | ${item.title}`} description={item.intro}>
  <section class:list={["band", item.chipClass]} style={`--accent:${item.accent};`}>
    <div class="container band-inner">
      <div class="left">
        <p class="kicker">Expertise</p>
        <h1 class="h2">{item.title}</h1>
        <p class="p">{item.intro}</p>

        <div class="blocks">
          <div class="block">
            <h2 class="sub">Wat je krijgt</h2>
            <ul class="list">
              {item.whatYouGet.map((li) => <li>{li}</li>)}
            </ul>
          </div>

          <div class="block">
            <h2 class="sub">Aanpak</h2>
            <div class="steps">
              {item.steps.map((s) => (
                <div class="step">
                  <span class="nr">{s.nr}</span>
                  <p>{s.text}</p>
                </div>
              ))}
            </div>
          </div>

          <div class="block investment">
            <h2 class="sub">Investering</h2>
            <div class="cost-card">
              <div class="cost-content">
                <p class="cost-price">
                  {pricePrefix}
                  <span class="amount" style={`color: var(--accent)`}>{item.costs.price}</span>
                </p>
                <p class="cost-desc">{item.costs.description}</p>
              </div>

              <ul class="cost-features">
                {item.costs.features.map((f) => (
                  <li>
                    <svg
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="var(--accent)"
                      stroke-width="3"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      aria-hidden="true"
                      focusable="false"
                    >
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                    {f}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>

        <div class="block">
          <h2 class="sub">Praktisch</h2>

          <div class="practical">
            <div class="practical-card highlight">
              <p class="practical-title">Doorlooptijd</p>
              <p class="practical-text">{item.timeline}</p>
            </div>

            <div class="practical-card">
              <p class="practical-title">Ideaal voor</p>
              <ul class="practical-list">
                {item.idealFor.map((x) => <li>{x}</li>)}
              </ul>
            </div>

            <div class="practical-card">
              <p class="practical-title">Inbegrepen</p>
              <ul class="practical-list">
                {item.includes.map((x) => <li>{x}</li>)}
              </ul>
            </div>

            <div class="practical-card">
              <p class="practical-title">Niet inbegrepen</p>
              <ul class="practical-list">
                {item.notIncluded.map((x) => <li>{x}</li>)}
              </ul>
            </div>
          </div>
        </div>

        {currentExtras.examples.length > 0 && (
          <div class="examples">
            <h2 class="sub">Voorbeelden</h2>
            <div class="example-grid">
              {currentExtras.examples.map((ex) => (
                <div class="example-card">
                  <p class="ex-title">{ex.title}</p>
                  <p class="ex-text">{ex.summary}</p>
                </div>
              ))}
            </div>
          </div>
        )}

        {currentExtras.faq.length > 0 && (
          <div class="faq">
            <h2 class="sub">Veelgestelde vragen</h2>
            <div class="faq-list">
              {currentExtras.faq.map((f) => (
                <div class="faq-item">
                  <p class="faq-q">{f.q}</p>
                  <p class="faq-a">{f.a}</p>
                </div>
              ))}
            </div>
          </div>
        )}

        <div class="actions">
          <Button href="/cases" variant="primary" label="Bekijk cases" />
          <Button href="/contact" variant="secondary" label="Plan kennismaking" />
        </div>

        <div class="back">
          <a class="backlink" href="/expertise">← Terug naar expertise</a>
        </div>
      </div>

      <div class="right">
        <div class="panel">
          {item.panel.map((p) => (
            <>
              <p class="label">{p.label}</p>
              <p class="value">{p.value}</p>
            </>
          ))}
        </div>

        <div class="sidepanel" aria-label="Andere expertise">
          <p class="label">Andere expertise</p>
          <div class="side-links">
            {expertiseItems
              .filter((x) => x.slug !== item.slug)
              .map((x) => (
                <a class="side-link" href={`/expertise/${x.slug}`}>
                  {x.title}
                </a>
              ))}
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

  <style>
    /* accents */
    .purple{ --accent:#7c3aed; }
    .blue{ --accent:#2F89FF; }
    .cyan{ --accent:#22c55e; }

    .band{
      padding: 140px 0;
      position: relative;
      overflow: hidden;
    }

    .band::after{
      content:"";
      position:absolute;
      inset:-200px -120px;
      pointer-events:none;
      background:
        radial-gradient(
          900px 520px at 30% 20%,
          color-mix(in srgb, var(--accent) 22%, transparent),
          transparent 65%
        ),
        radial-gradient(
          700px 420px at 80% 60%,
          color-mix(in srgb, var(--accent) 14%, transparent),
          transparent 70%
        );
      opacity: .85;
    }

    .investment {
    margin-top: 10px;
  }

  .cost-card {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 24px;
    padding: 24px;
    border-radius: var(--radius);
    background: rgba(255,255,255,.025);
    border: 1px solid rgba(255,255,255,.08);
    align-items: center;
  }

  .cost-price {
    margin: 0;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgba(255,255,255,0.5);
  }

  .amount {
    display: block;
    font-size: 32px;
    font-weight: 700;
    letter-spacing: -0.02em;
    margin-top: 4px;
  }

  .cost-desc {
    margin: 12px 0 0;
    font-size: 14px;
    line-height: 1.5;
    color: rgba(255,255,255,0.7);
    max-width: 30ch;
  }

  .cost-features {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 10px;
  }

  .cost-features li {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 14px;
    color: rgba(255,255,255,0.8);
  }

  @media (max-width: 600px) {
    .cost-card {
      grid-template-columns: 1fr;
      gap: 20px;
    }
  }
    .band-inner{
      display:grid;
      grid-template-columns: 1.3fr .7fr;
      gap: 48px;
      align-items:start;
      position: relative;
      z-index: 1;
    }
.practical{
  display:grid;
  grid-template-columns: repeat(2, minmax(0,1fr));
  gap: 18px;
  margin-top: 16px;
}

.practical-card{
  position: relative;
  border-radius: var(--radius);
  border: 1px solid rgba(255,255,255,.08);
  background: linear-gradient(
    145deg,
    rgba(255,255,255,.035),
    rgba(255,255,255,.015)
  );
  padding: 20px 20px 18px;
  transition: border-color .18s ease, transform .18s ease, background .18s ease;
}

.practical-card::before{
  content:"";
  position:absolute;
  left:0;
  top:0;
  bottom:0;
  width:3px;
  border-radius: 3px 0 0 3px;
  background: var(--accent);
  opacity:.85;
}

.practical-card:hover{
  border-color: rgba(255,255,255,.18);
  transform: translateY(-2px);
  background: linear-gradient(
    145deg,
    rgba(255,255,255,.05),
    rgba(255,255,255,.02)
  );
}

.practical-card.highlight{
  background: radial-gradient(
      420px 220px at 0% 0%,
      color-mix(in srgb, var(--accent) 18%, transparent),
      transparent 60%
    ),
    linear-gradient(
      145deg,
      rgba(255,255,255,.04),
      rgba(255,255,255,.015)
    );
    
  border-color: color-mix(in srgb, var(--accent) 22%, rgba(255,255,255,.10));
}

.practical-card.highlight:hover{
  border-color: color-mix(in srgb, var(--accent) 30%, rgba(255,255,255,.18));
}

.practical-title{
  margin: 0 0 12px;
  font-size: 11px;
  letter-spacing: .14em;
  text-transform: uppercase;
  color: rgba(255,255,255,.55);
}

.practical-text{
  margin: 0;
  font-size: 16px;
  font-weight: 650;
  color: rgba(255,255,255,.92);
  line-height: 1.35;
}

.practical-list{
  margin: 0;
  padding: 0;
  list-style: none;
  display: grid;
  gap: 8px;
}

.practical-list li{
  font-size: 14px;
  line-height: 1.6;
  color: rgba(255,255,255,.75);
  padding-left: 16px;
  position: relative;
}

.practical-list li::before{
  content:"";
  position:absolute;
  left:0;
  top:9px;
  width:6px;
  height:6px;
    border-radius: 24px;
  background: var(--accent);
  opacity:.9;
    border-radius: 24px;

}

@media (max-width: 980px){
  .practical{
    grid-template-columns: 1fr;
  }
}


    .band-inner::before{
      content:"";
      position:absolute;
      left:0;
      top:-18px;
      width: 56px;
      height: 2px;
      border-radius: 2px;
      background: var(--accent);
      opacity: .9;
    }

    .kicker{
      margin:0 0 10px;
      font-size: 12px;
      letter-spacing: .14em;
      text-transform: uppercase;
      color: rgba(255,255,255,.50);
    }

    .h2{
      font-size: clamp(34px, 4vw, 52px);
      letter-spacing: -0.04em;
      line-height: 1.05;
      margin: 0;
    }

    .p{
      font-size: 18px;
      line-height: 1.8;
      max-width: 70ch;
      margin-top: 14px;
      color: rgba(255,255,255,.72);
    }

    .blocks{
      margin-top: 28px;
      display:flex;
      flex-direction:column;
      gap: 26px;
    }

    .sub{
      margin: 0 0 14px;
      font-size: 12px;
      letter-spacing: .14em;
      text-transform: uppercase;
      color: rgba(255,255,255,.55);
    }

    .list{
      margin: 0;
      padding-left: 18px;
      color: rgba(255,255,255,.70);
      line-height: 1.9;
      font-size: 15px;
    }

    .steps{
      display:grid;
      grid-template-columns: repeat(3, minmax(0,1fr));
      gap: 18px;
    }

    .step{
      padding: 18px;
      border-radius: var(--radius);
      background: rgba(255,255,255,.025);
      border: 1px solid rgba(255,255,255,.08);
    }

