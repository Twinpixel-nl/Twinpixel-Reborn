---
import BaseLayout from "../layouts/BaseLayout.astro";
import SectionHeader from "../components/SectionHeader.astro";
import PortfolioCard from "../components/PortfolioCard.astro";

const projects = [
  {
    title: "SocialMediaManager.nl",
    description: "Strakke lead-page met duidelijke structuur en premium uitstraling.",
    tags: ["Design", "SEO", "Landing"],
    image: "/portfolio/featured.jpg",
    href: "#"
  },
  {
    title: "Twinpixel.nl",
    description: "Agency site: donker, minimal en performance-first.",
    tags: ["Astro", "Performance", "UI"],
    image: "/portfolio/twinpixel.jpg",
    href: "#"
  },
  {
    title: "VVD Wageningen",
    description: "Campagne-site met pagina-structuur en content-focus.",
    tags: ["Content", "SEO", "Static"],
    image: "/portfolio/vvd.jpg",
    href: "#"
  },
  {
    title: "Platform concept",
    description: "Content-structuur en UX voor een community/cursus platform.",
    tags: ["UX", "IA", "Design"],
    image: "/portfolio/platform.jpg",
    href: "#"
  }
];
---
<BaseLayout title="Twinpixel â€” Portfolio" description="Portfolio en geselecteerde projecten.">
  <section class="section">
    <div class="container">
      <SectionHeader
        title="portfolio"
        subtitle="een selectie projecten. strak design, snelle sites, en een basis die schaalbaar blijft."
      />

      <div class="grid">
        {projects.map((p) => <PortfolioCard {...p} />)}
      </div>
    </div>
  </section>

  <style>
    .grid{
      display:grid;
      grid-template-columns: repeat(3, minmax(0,1fr));
      gap: 18px;
    }
    @media (max-width: 980px){
      .grid{ grid-template-columns: 1fr; }
    }
  </style>
</BaseLayout>
