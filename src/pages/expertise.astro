---
import BaseLayout from "../layouts/BaseLayout.astro";
import SectionHeader from "../components/SectionHeader.astro";
import Button from "../components/Button.astro";
import { expertiseItems } from "../data/expertise";
---

<BaseLayout
  title="Twinpixel | Expertise"
  description="Drie kerngebieden. Kies je expertise en bekijk aanpak, deliverables en resultaat."
>
  <!-- intro -->
  <section class="section intro">
    <div class="container">
      <SectionHeader
        title="expertise"
        subtitle="Drie kerngebieden. Onze aanpak: strak design, heldere structuur en performance-first."
      />

      <div class="lead">
        <p>
          We werken vanuit drie routes. Kies wat je nu nodig hebt en bekijk per expertise
          de aanpak, deliverables en het resultaat.
        </p>
      </div>

      <!-- accordion previews -->
      <div class="accordion" aria-label="Expertise uitleg">
        {expertiseItems.map((x) => (
          <details class:list={["acc", x.chipClass]}>
            <summary>
              <span class="acc-title">{x.title}</span>
              <span class="acc-hint">open</span>
            </summary>

            <div class="acc-body">
              <p class="acc-text">{x.intro}</p>

              <div class="acc-cols">
                <div class="acc-col">
                  <p class="acc-label">Wat je krijgt</p>
                  <ul class="acc-list">
                    {x.whatYouGet.slice(0, 3).map((li) => <li>{li}</li>)}
                  </ul>
                </div>

                <div class="acc-col">
                  <p class="acc-label">Aanpak</p>
                  <ol class="acc-steps">
                    {x.steps.slice(0, 3).map((s) => (
                      <li>
                        <span class="nr">{s.nr}</span>
                        <span>{s.text}</span>
                      </li>
                    ))}
                  </ol>
                </div>
              </div>

              <div class="acc-actions">
                <Button href={`/expertise/${x.slug}`} variant="primary" label="Bekijk pagina" />
                <Button href="/contact" variant="secondary" label="Contact" />
              </div>
            </div>
          </details>
        ))}
      </div>

      <!-- bottom CTA -->
      <div class="cta">
        <div class="cta-left">
          <h2 class="cta-title">Twijfel je nog?</h2>
          <p class="cta-text">
            Stuur kort je situatie en deadline. We adviseren direct welke richting past en wat je kunt verwachten.
          </p>
        </div>
        <div class="cta-right">
          <Button href="/contact" variant="primary" label="Plan kennismaking" />
          <Button href="/portfolio" variant="secondary" label="Bekijk cases" />
        </div>
      </div>
    </div>
  </section>

  <style>
    /* accents */
    .purple{ --accent:#7c3aed; }
    .blue{ --accent:#2F89FF; }
    .cyan{ --accent:#22c55e; }

    .intro{
      padding: 70px 0 90px;
      position: relative;
      overflow: hidden;
    }

    .intro::before{
      content:"";
      position:absolute;
      inset: -120px 10% auto;
      height: 240px;
      background: radial-gradient(60% 60% at 50% 50%, rgba(255,255,255,.06), transparent 60%);
      opacity: .8;
      pointer-events: none;
    }

    .lead{
      margin-top: 14px;
      max-width: 66ch;
      color: rgba(255,255,255,.72);
      font-size: 17px;
      line-height: 1.8;
    }

    .choose{
      margin-top: 18px;
      display: grid;
      gap: 14px;
    }

    /* dropdown */
    .jump{
      display: grid;
      gap: 8px;
      max-width: 360px;
    }
    .jump-label{
      font-size: 11px;
      letter-spacing: .14em;
      text-transform: uppercase;
      color: rgba(255,255,255,.48);
    }
    .jump-select{
      width: 100%;
      padding: 12px 12px;
      border-radius: 14px;
      border: 1px solid rgba(255,255,255,.12);
      background: rgba(255,255,255,.03);
      color: rgba(255,255,255,.82);
      outline: none;
    }
    .jump-select:focus{
      border-color: rgba(255,255,255,.22);
    }

    /* chips */
    .chips{
      display:flex;
      gap: 10px;
      flex-wrap: wrap;
    }
    .chip{
      font-size: 13px;
      padding: 8px 12px;
      border-radius: 999px;
      border: 1px solid rgba(255,255,255,.12);
      background: rgba(255,255,255,.03);
      color: rgba(255,255,255,.78);
      transition: border-color .14s ease, background-color .14s ease, transform .14s ease;
    }
    .chip:hover{
      border-color: rgba(255,255,255,.22);
      background: rgba(255,255,255,.045);
      transform: translateY(-1px);
    }

    /* accordion */
    .accordion{
      margin-top: 26px;
      display: grid;
      gap: 12px;
      max-width: 980px;
    }

    .acc{
      border-radius: 18px;
      border: 1px solid rgba(255,255,255,.10);
      background: rgba(255,255,255,.02);
      overflow: hidden;
      position: relative;
      transition: border-color .18s ease, background-color .18s ease, transform .18s ease;
    }

    .acc::before{
      content:"";
      position:absolute;
      inset:-1px;
      border-radius: inherit;
      pointer-events:none;
      box-shadow: inset 0 0 0 1px color-mix(in srgb, var(--accent) 22%, transparent);
      opacity:.25;
    }

    .acc[open]{
      background: linear-gradient(180deg, rgba(255,255,255,.03), rgba(255,255,255,.015));
      border-color: color-mix(in srgb, var(--accent) 22%, rgba(255,255,255,.12));
      transform: translateY(-2px);
    }

    .acc summary{
      cursor: pointer;
      list-style: none;
      display:flex;
      justify-content: space-between;
      align-items: center;
      gap: 12px;
      padding: 18px 18px;
      color: rgba(255,255,255,.92);
      font-weight: 660;
      transition: color .14s ease;
    }
    .acc summary::-webkit-details-marker{ display:none; }

    .acc summary:hover .acc-hint{
      color: rgba(255,255,255,.82);
    }

    .acc[open] summary{
      border-bottom: 1px solid rgba(255,255,255,.08);
      padding-bottom: 14px;
    }

    .acc-title{
      font-size: 16px;
      letter-spacing: -0.01em;
    }
    .acc-hint{
      font-size: 12.5px;
      letter-spacing: .10em;
      text-transform: uppercase;
      color: rgba(255,255,255,.62);
    }

    .acc-body{
      padding: 0 18px 18px;
    }

    .acc-text{
      margin: 0 0 14px;
      color: rgba(255,255,255,.78);
      line-height: 1.75;
      max-width: 80ch;
      font-size: 15.5px;
    }

    .acc-cols{
      display:grid;
      grid-template-columns: 1fr 1fr;
      gap: 16px;
      margin-top: 10px;
    }

    .acc-col{
      border-radius: 14px;
      border: 1px solid rgba(255,255,255,.08);
      background: rgba(255,255,255,.02);
      padding: 14px;
      box-shadow: 0 1px 0 rgba(255,255,255,.02);
    }

    .acc-label{
      margin: 0 0 10px;
      font-size: 11px;
      letter-spacing: .14em;
      text-transform: uppercase;
      color: rgba(255,255,255,.50);
    }

    .acc-list{
      margin: 0;
      padding-left: 18px;
      color: rgba(255,255,255,.76);
      line-height: 1.85;
      font-size: 14.5px;
    }

    .acc-steps{
      margin: 0;
      padding-left: 18px;
      color: rgba(255,255,255,.76);
      line-height: 1.75;
      font-size: 14.5px;
      display: grid;
      gap: 8px;
    }

    .acc-steps li{
      display:flex;
      gap: 10px;
      align-items: flex-start;
    }

    .nr{
      color: var(--accent);
      letter-spacing: .12em;
      font-size: 12.5px;
      min-width: 36px;
    }

    .acc-actions{
      margin-top: 16px;
      display:flex;
      gap: 12px;
      flex-wrap: wrap;
    }

    /* bottom CTA */
    .cta{
      margin-top: 34px;
      padding: 22px;
      border-radius: 18px;
      border: 1px solid rgba(255,255,255,.10);
      background: rgba(255,255,255,.02);
      display:flex;
      justify-content: space-between;
      gap: 18px;
      align-items: center;
      max-width: 980px;
    }

    .cta-left{
      max-width: 60ch;
    }

    .cta-title{
      margin: 0 0 6px;
      font-size: 18px;
      letter-spacing: -0.01em;
    }

    .cta-text{
      margin: 0;
      color: rgba(255,255,255,.70);
      line-height: 1.7;
    }

    .cta-right{
      display:flex;
      gap: 12px;
      flex-wrap: wrap;
      flex-shrink: 0;
    }

    @media (max-width: 980px){
      .acc-cols{ grid-template-columns: 1fr; }
      .acc summary{ flex-direction: column; align-items: flex-start; }
      .acc summary{ gap: 6px; }
      .acc summary .acc-hint{ margin-left: 0; }
      .cta{ flex-direction: column; align-items: flex-start; }
    }
  </style>
</BaseLayout>
