---
import BaseLayout from "../layouts/BaseLayout.astro";
import Button from "../components/Button.astro";
import { expertiseItems } from "../data/expertise";
---

<BaseLayout
  title="Twinpixel | Expertise"
  description="Drie kerngebieden. Kies je expertise en bekijk aanpak, deliverables en resultaat."
>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container hero-inner">
      <p class="kicker">Onze Expertise</p>
      <h1 class="h1">Drie routes naar succes</h1>
      <p class="lead">
        We werken vanuit drie kerngebieden. Kies wat je nu nodig hebt en ontdek onze aanpak,
        deliverables en bewezen resultaten.
      </p>
    </div>
  </section>

  <!-- Expertise Cards -->
  <section class="section expertise-section">
    <div class="container">
      <div class="expertise-grid">
        {expertiseItems.map((item) => (
          <a
            class="expertise-card"
            href={`/expertise/${item.slug}`}
            style={`--accent: ${item.accent};`}
            aria-label={`Bekijk ${item.title} expertise`}
          >
            <div class="card-header">
              <div class="card-badge" style={`background: ${item.accent}20; color: ${item.accent};`}>
                {item.title}
              </div>
              <div class="card-icon" style={`background: ${item.accent}15;`}>
                <div class="icon-placeholder" style={`background: ${item.accent};`}></div>
              </div>
            </div>

            <div class="card-content">
              <p class="card-description">{item.intro}</p>

              <div class="card-features">
                <div class="feature-group">
                  <h4 class="feature-title">Wat je krijgt</h4>
                  <ul class="feature-list">
                    {item.whatYouGet.slice(0, 2).map((feature) => (
                      <li>{feature}</li>
                    ))}
                  </ul>
                </div>

                <div class="feature-group">
                  <h4 class="feature-title">Aanpak</h4>
                  <ul class="feature-list numbered">
                    {item.steps.slice(0, 2).map((step) => (
                      <li>
                        <span class="step-number">{step.nr}</span>
                        <span>{step.text}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            </div>

            <div class="card-footer">
              <div class="card-results">
                {item.panel.slice(0, 2).map((panel) => (
                  <div class="result-item">
                    <span class="result-label">{panel.label}:</span>
                    <span class="result-value">{panel.value}</span>
                  </div>
                ))}
              </div>
              <div class="card-cta">
                <span class="cta-text">Bekijk details</span>
                <div class="cta-arrow">â†’</div>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section cta-section">
    <div class="container">
      <div class="cta-card">
        <div class="cta-content">
          <h2 class="cta-title">Twijfel je nog?</h2>
          <p class="cta-description">
            Stuur kort je situatie en deadline. We adviseren direct welke richting past
            en wat je kunt verwachten.
          </p>
        </div>
        <div class="cta-actions">
          <Button href="/contact" variant="primary" label="Plan kennismaking" />
          <Button href="/cases" variant="secondary" label="Bekijk cases" />
        </div>
      </div>
    </div>
  </section>

  <style>
    /* Hero Section */
    .hero {
      padding: 140px 0 80px;
      position: relative;
      overflow: hidden;
      background: radial-gradient(120% 140% at 20% 0%, rgba(47,137,255,.18), transparent 60%);
    }

    .hero::after {
      content: "";
      position: absolute;
      inset: -200px -120px;
      pointer-events: none;
      background:
        radial-gradient(1000px 620px at 20% 0%, rgba(47,137,255,.20), transparent 62%),
        radial-gradient(900px 620px at 85% 35%, rgba(124,58,237,.12), transparent 68%),
        radial-gradient(900px 620px at 80% 80%, rgba(20,184,166,.08), transparent 70%);
      opacity: .9;
    }

    .hero-inner {
      position: relative;
      z-index: 1;
      max-width: 800px;
    }

    .kicker {
      margin: 0 0 14px;
      font-size: 12px;
      letter-spacing: .14em;
      text-transform: uppercase;
      color: rgba(255,255,255,.50);
    }

    .h1 {
      margin: 0;
      font-size: clamp(44px, 5.2vw, 74px);
      letter-spacing: -0.05em;
      line-height: 1.02;
      font-weight: 650;
    }

    .lead {
      margin: 18px 0 0;
      color: rgba(255,255,255,.70);
      font-size: 18px;
      line-height: 1.8;
      max-width: 70ch;
    }

    /* Expertise Section */
    .expertise-section {
      padding: 80px 0;
    }

    .expertise-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
      gap: 32px;
      max-width: 1200px;
    }

    .expertise-card {
      display: block;
      border-radius: 24px;
      border: 1px solid rgba(255,255,255,.10);
      background: rgba(255,255,255,.025);
      padding: 32px;
      text-decoration: none;
      transition: all .3s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      overflow: hidden;
      min-height: 480px;
      box-shadow: 0 8px 32px rgba(0,0,0,.12);
    }

    .expertise-card::before {
      content: "";
      position: absolute;
      inset: -200px -120px;
      pointer-events: none;
      opacity: 0;
      background: radial-gradient(600px 400px at 30% 20%, color-mix(in srgb, var(--accent) 15%, transparent), transparent 70%);
      transition: opacity .3s ease;
    }

    .expertise-card:hover {
      transform: translateY(-8px);
      border-color: color-mix(in srgb, var(--accent) 30%, rgba(255,255,255,.14));
      background: rgba(255,255,255,.035);
      box-shadow: 0 20px 60px rgba(0,0,0,.18);
    }

    .expertise-card:hover::before {
      opacity: 1;
    }

    .card-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 24px;
    }

    .card-badge {
      padding: 8px 16px;
      border-radius: 20px;
      font-size: 14px;
      font-weight: 600;
      letter-spacing: .02em;
      border: 1px solid color-mix(in srgb, var(--accent) 20%, rgba(255,255,255,.12));
    }

    .card-icon {
      width: 56px;
      height: 56px;
      border-radius: 16px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .icon-placeholder {
      width: 24px;
      height: 24px;
      border-radius: 6px;
    }

    .card-content {
      margin-bottom: 24px;
    }

    .card-description {
      margin: 0 0 24px;
      color: rgba(255,255,255,.78);
      font-size: 16px;
      line-height: 1.7;
      max-width: 80ch;
    }

    .card-features {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 24px;
    }

    .feature-group {
      display: flex;
      flex-direction: column;
    }

    .feature-title {
      margin: 0 0 12px;
      font-size: 12px;
      letter-spacing: .14em;
      text-transform: uppercase;
      color: rgba(255,255,255,.50);
      font-weight: 600;
    }

    .feature-list {
      margin: 0;
      padding: 0;
      list-style: none;
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .feature-list li {
      color: rgba(255,255,255,.76);
      font-size: 14px;
      line-height: 1.5;
      display: flex;
      align-items: flex-start;
      gap: 8px;
    }

    .feature-list.numbered li {
      position: relative;
      padding-left: 24px;
    }

    .step-number {
      position: absolute;
      left: 0;
      color: var(--accent);
      font-size: 12px;
      font-weight: 600;
      letter-spacing: .08em;
      min-width: 20px;
    }

    .card-footer {
      margin-top: auto;
      padding-top: 24px;
      border-top: 1px solid rgba(255,255,255,.08);
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
    }

    .card-results {
      display: flex;
      flex-direction: column;
      gap: 6px;
    }

    .result-item {
      display: flex;
      flex-direction: column;
      gap: 2px;
    }

    .result-label {
      font-size: 11px;
      letter-spacing: .12em;
      text-transform: uppercase;
      color: rgba(255,255,255,.48);
    }

    .result-value {
      font-size: 13px;
      color: rgba(255,255,255,.78);
      line-height: 1.4;
    }

    .card-cta {
      display: flex;
      align-items: center;
      gap: 8px;
      color: var(--accent);
      font-weight: 600;
      font-size: 14px;
      transition: gap .3s ease;
    }

    .expertise-card:hover .card-cta {
      gap: 12px;
    }

    .cta-arrow {
      transition: transform .3s ease;
    }

    .expertise-card:hover .cta-arrow {
      transform: translateX(4px);
    }

    /* CTA Section */
    .cta-section {
      padding: 80px 0 120px;
    }

    .cta-card {
      max-width: 800px;
      margin: 0 auto;
      padding: 40px;
      border-radius: 24px;
      border: 1px solid rgba(255,255,255,.10);
      background: rgba(255,255,255,.025);
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 40px;
      box-shadow: 0 12px 48px rgba(0,0,0,.12);
    }

    .cta-content {
      flex: 1;
    }

    .cta-title {
      margin: 0 0 8px;
      font-size: 24px;
      letter-spacing: -0.02em;
      font-weight: 650;
    }

    .cta-description {
      margin: 0;
      color: rgba(255,255,255,.70);
      font-size: 16px;
      line-height: 1.7;
    }

    .cta-actions {
      display: flex;
      gap: 16px;
      flex-wrap: wrap;
      flex-shrink: 0;
    }

    /* Responsive */
    @media (max-width: 980px) {
      .hero {
        padding: 100px 0 60px;
      }

      .expertise-grid {
        grid-template-columns: 1fr;
        gap: 24px;
      }

      .expertise-card {
        padding: 24px;
        min-height: 420px;
      }

      .card-features {
        grid-template-columns: 1fr;
        gap: 20px;
      }

      .card-footer {
        flex-direction: column;
        align-items: flex-start;
        gap: 16px;
      }

      .cta-card {
        flex-direction: column;
        text-align: center;
        gap: 24px;
        padding: 32px 24px;
      }
    }

    @media (max-width: 640px) {
      .expertise-card {
        padding: 20px;
      }

      .card-header {
        margin-bottom: 20px;
      }

      .card-content {
        margin-bottom: 20px;
      }

      .card-features {
        gap: 16px;
      }
    }
  </style>
</BaseLayout>
