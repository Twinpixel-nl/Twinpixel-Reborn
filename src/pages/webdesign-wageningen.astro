---
import BaseLayout from "../layouts/BaseLayout.astro";
import CasesPreview from "../components/CasesPreview.astro";
import Button from "../components/Button.astro";

// Consistent met je footer-link en makkelijk te vervangen als nodig
const mapsUrl = "https://maps.app.goo.gl/XJkGA7g8TkB1aJTA6";

const page = {
  title: "Website laten maken in Wageningen | Webdesign bureau - TwinPixel",
  description:
    "Website laten maken in Wageningen? TwinPixel ontwerpt en bouwt professionele websites die vertrouwen wekken, snel laden en zorgen voor meer aanvragen.",
  h1: "Website laten maken in Wageningen",
};

const business = {
  name: "TwinPixel",
  email: "info@twinpixel.nl",
  phone: "+31 6 82579179",
  addressLocality: "Wageningen",
  addressRegion: "Gelderland",
  addressCountry: "NL",
  area: ["Wageningen", "Ede", "Bennekom", "Rhenen", "Veenendaal"],
};

// Reviews: houd het klein, echt en klikbaar (naar Maps)
const reviews = [
  {
    author: "Harvey Meurs",
    company: "Wetvanstaal",
    text:
      "Prachtige website opgeleverd binnen een week. Snel, gebruiksvriendelijk en ziet er fantastisch uit.",
  },
  {
    author: "Otto Vleeming",
    company: "Stadspartij Wageningen",
    text: "Ze denken goed mee en geven eerlijke adviezen. Top samenwerking!",
  },
  {
    author: "Julian van Beek",
    company: "Rocket Agency",
    text: "Snelle levering, goede service, hoge kwaliteit en persoonlijke aanpak.",
  },
];

const faqs = [
  {
    q: "Wat kost een website laten maken in Wageningen?",
    a: "Dat hangt af van omvang en wensen. We werken met heldere richtprijzen en maken altijd een voorstel op maat.",
  },
  {
    q: "Hoe lang duurt het bouwen van een website?",
    a: "Meestal 3 tot 5 weken. De snelheid hangt vooral af van feedbackrondes en content (tekst/beelden).",
  },
  {
    q: "Kunnen jullie ook helpen met vindbaarheid (SEO)?",
    a: "Ja. We zorgen voor een sterke technische basis (structuur, headings, indexeerbaarheid, performance) en kunnen helpen met content die beter scoort op lokale zoekwoorden.",
  },
  {
    q: "Kunnen we ook in Wageningen afspreken?",
    a: "Ja. We zitten in Wageningen, dus even sparren op locatie kan (op afspraak). Liever online? Kan ook.",
  },
  {
    q: "Werken jullie alleen in Wageningen?",
    a: "Nee. Deze pagina is gericht op Wageningen en omgeving, maar we werken ook voor bedrijven elders in Nederland.",
  },
];

// URL’s voor schema (pakken Astro.site als je die netjes hebt ingesteld)
const origin = (Astro.site ?? Astro.url.origin).toString();
const canonicalURL = new URL(Astro.url.pathname, origin).toString();
const orgId = `${origin}#organization`;

const areaServed = business.area.map((name) => ({ "@type": "City", name }));

// Page-level JSON-LD: géén dubbele/risicovolle LocalBusiness markup.
// Wel: WebPage + Service + Breadcrumb + FAQ (FAQ rich results zijn tegenwoordig beperkt; markup kan alsnog helpen voor context.)
const jsonLd = [
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    itemListElement: [
      { "@type": "ListItem", position: 1, name: "Home", item: origin },
      { "@type": "ListItem", position: 2, name: "Webdesign Wageningen", item: canonicalURL },
    ],
  },
  {
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": `${canonicalURL}#webpage`,
    url: canonicalURL,
    name: page.h1,
    description: page.description,
    inLanguage: "nl-NL",
    about: { "@id": orgId },
  },
  {
    "@context": "https://schema.org",
    "@type": "Service",
    "@id": `${canonicalURL}#service`,
    name: "Webdesign in Wageningen",
    serviceType: ["Webdesign", "Webdevelopment", "SEO"],
    provider: { "@id": orgId },
    areaServed,
    url: canonicalURL,
  },
  {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    mainEntity: faqs.map((f) => ({
      "@type": "Question",
      name: f.q,
      acceptedAnswer: {
        "@type": "Answer",
        text: f.a,
      },
    })),
  },
];
---

<BaseLayout title={page.title} description={page.description}>
  <main>
    <!-- HERO -->
    <section class="section hero-simple" aria-label="Webdesign Wageningen">
      <div class="container">
        <p class="kicker">Webdesign in Wageningen</p>

        <h1 class="h1">{page.h1}</h1>

        <p class="lead">
          Op zoek naar een professionele website voor je bedrijf in Wageningen?
          <strong> {business.name}</strong> ontwerpt en bouwt websites die vertrouwen wekken, snel laden
          en gericht zijn op meer aanvragen, voor ondernemers in Wageningen en de regio.
        </p>

        <div class="cta">
          <Button href="/contact" variant="primary" label="Plan kennismaking" />
          <Button href="/cases" variant="secondary" label="Bekijk ons werk" />
        </div>

        <div class="proof" aria-label="Key points">
          <span>Premium uitstraling</span>
          <span class="sep">/</span>
          <span>Logische structuur</span>
          <span class="sep">/</span>
          <span>Vindbaar in Google</span>
        </div>
      </div>
    </section>

    <!-- INTRO -->
    <section class="section" aria-label="Webdesign bureau Wageningen">
      <div class="container">
        <h2 class="h2">Webdesign bureau in Wageningen</h2>

        <p class="lead small">
          {business.name} is een webdesign bureau voor bedrijven in Wageningen en omgeving.
          Wij bouwen websites die professioneel aanvoelen, praktisch werken en klaar zijn om conversie te pakken.
        </p>

        <p class="text">
          Of je nu een nieuwe website nodig hebt of je huidige site wilt verbeteren:
          we denken mee over uitstraling, structuur en inhoud. Je werkt direct met de makers, 
          zonder accountlagen of ruis.
        </p>

        <p class="text">
          <a class="inline-link" href="/contact">Contact opnemen</a> werkt het snelst. Liever eerst wat context?
          <a class="inline-link" href="/over-ons">Lees wie we zijn</a>.
        </p>

        <div class="chips" aria-label="Regio">
          {business.area.map((c) => <span class="chip">{c}</span>)}
        </div>
      </div>
    </section>

    <!-- LOCAL SEO -->
    <section class="section" aria-label="Lokale SEO Wageningen" id="lokale-seo">
      <div class="container">
        <h2 class="h2">Lokale SEO in Wageningen</h2>

        <p class="lead small">
          Een mooie site is leuk, maar je wil vooral: <strong>gevonden worden door mensen uit Wageningen</strong>.
          Daarom bouwen we niet alleen “een design”, maar een pagina-structuur die zoekmachines snappen
          en bezoekers logisch naar contact stuurt.
        </p>

        <div class="pillars pillars-3" aria-label="Lokale SEO onderdelen">
          <div class="pill">
            <h3 class="pill-title">Zoekwoorden &amp; structuur</h3>
            <p class="pill-text">
              We koppelen lokale zoekintentie aan je pagina’s (diensten, cases, FAQ) en zorgen dat je site
              één helder verhaal vertelt.
            </p>
          </div>

          <div class="pill">
            <h3 class="pill-title">Techniek die Google snapt</h3>
            <p class="pill-text">
              Snelle laadtijden, nette headings, indexeerbaarheid en een basis die klaar is voor groei.
              Geen “SEO trucjes”, gewoon goed gebouwd.
            </p>
          </div>

          <div class="pill">
            <h3 class="pill-title">Google Maps &amp; vertrouwen</h3>
            <p class="pill-text">
              We helpen met lokale signalen: duidelijke contactinfo, link naar Google Maps en content die laat zien
              dat je echt in/voor de regio werkt.
            </p>
          </div>
        </div>

        <p class="text">
          Tip: als je ook actief bent in meerdere plaatsen, maak dan pagina’s die echt verschillen in inhoud
          (geen knip-plak met alleen de plaatsnaam). Dat is beter voor bezoekers én SEO.
        </p>
      </div>
    </section>

    <!-- WHAT YOU GET -->
    <section class="section" aria-label="Diensten" id="diensten">
      <div class="container">
        <h2 class="h2">Wat we doen</h2>
        <p class="lead small">
          Alles wat je nodig hebt voor een sterke website: ontwerp, bouw, technische basis en doorontwikkeling.
        </p>

        <div class="pillars" aria-label="Kernpunten">
          <div class="pill">
            <h3 class="pill-title">Website laten maken</h3>
            <p class="pill-text">
              Van eerste opzet tot livegang. Een website die past bij je bedrijf en klaar is om klanten te overtuigen.
            </p>
          </div>

          <div class="pill">
            <h3 class="pill-title">Webdesign &amp; structuur</h3>
            <p class="pill-text">
              Een helder verhaal, logische pagina-opbouw en een ontwerp dat vertrouwen uitstraalt vanaf de eerste indruk.
            </p>
          </div>

          <div class="pill">
            <h3 class="pill-title">Technische basis &amp; SEO</h3>
            <p class="pill-text">
              Snelle laadtijden, goede indexeerbaarheid en een basis die zoekmachines snappen, zonder onzin.
            </p>
          </div>

          <div class="pill">
            <h3 class="pill-title">Onderhoud &amp; doorontwikkeling</h3>
            <p class="pill-text">
              Ook na oplevering helpen we met verbeteringen, uitbreidingen en optimalisatie.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- PROCESS -->
    <section class="section" aria-label="Werkwijze" id="werkwijze">
      <div class="container">
        <h2 class="h2">Zo pakken we het aan</h2>

        <div class="steps" aria-label="Stappen">
          <div class="step">
            <div class="step-no">1</div>
            <div>
              <p class="step-title">Kennismaking</p>
              <p class="step-text">Doel, doelgroep, voorbeelden en wat je site moet opleveren.</p>
            </div>
          </div>

          <div class="step">
            <div class="step-no">2</div>
            <div>
              <p class="step-title">Structuur &amp; design</p>
              <p class="step-text">Pagina’s, contentflow, CTA’s en een ontwerp dat past bij je merk.</p>
            </div>
          </div>

          <div class="step">
            <div class="step-no">3</div>
            <div>
              <p class="step-title">Bouw &amp; livegang</p>
              <p class="step-text">Snelle implementatie, check op mobiel/desktop, analytics en live.</p>
            </div>
          </div>

          <div class="step">
            <div class="step-no">4</div>
            <div>
              <p class="step-title">Verbeteren</p>
              <p class="step-text">Meten, bijsturen en verder bouwen zodra je nieuwe doelen hebt.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CASES -->
    <section class="section" aria-label="Cases" id="cases">
      <div class="container">
        <div class="section-head">
          <h2 class="h2">Voorbeelden van werk</h2>
          <p class="lead small">
            Een paar projecten om gevoel te krijgen bij stijl, niveau en aanpak.
          </p>
        </div>
      </div>
      <CasesPreview />
    </section>

    <!-- REVIEWS -->
    <section class="section reviews" aria-label="Reviews" id="reviews">
      <div class="container">
        <div class="section-head center">
          <p class="kicker">Reviews</p>
          <h2 class="h2">Wat klanten zeggen</h2>
          <p class="lead small">Geselecteerde reviews. Bekijk alles op Google Maps.</p>
        </div>

        <div class="reviews-grid" aria-label="Klantreviews">
          {reviews.map((r) => (
            <a class="review-card" href={mapsUrl} target="_blank" rel="noopener noreferrer">
              <div class="review-stars" aria-label="5 sterren">
                <span class="star">★</span><span class="star">★</span><span class="star">★</span><span class="star">★</span><span class="star">★</span>
              </div>
              <blockquote class="review-text">“{r.text}”</blockquote>
              <div class="review-author">
                <div class="author-name">{r.author}</div>
                <div class="author-company">{r.company}</div>
              </div>
            </a>
          ))}
        </div>

        <p class="reviews-note">
          <a href={mapsUrl} target="_blank" rel="noopener noreferrer">Bekijk alle reviews →</a>
        </p>
      </div>
    </section>

    <!-- FAQ -->
    <section class="section faq" aria-label="FAQ" id="faq">
      <div class="container">
        <h2 class="h2">Veelgestelde vragen</h2>
        <p class="lead small">
          Kort en duidelijk. En als je wil sparren: plan gewoon even een kennismaking.
        </p>

        <div class="faq-wrap">
          {faqs.map((f) => (
            <details class="faq-item">
              <summary>{f.q}</summary>
              <p>{f.a}</p>
            </details>
          ))}
        </div>
      </div>
    </section>

    <!-- CONTACT CTA -->
    <section class="section contact-cta" id="contact" aria-label="Contact">
      <div class="container">
        <div class="cta-box">
          <div>
            <p class="kicker">Kennismaken</p>
            <h2 class="h2">Website laten maken in Wageningen?</h2>
            <p class="lead small">
              Plan een vrijblijvende kennismaking. Dan kijken we samen wat je nodig hebt en wat het ongeveer kost.
            </p>

            <p class="text contact-mini">
              <strong>{business.name}</strong> · {business.addressLocality}, {business.addressCountry}<br />
              <a class="inline-link" href={`mailto:${business.email}`}>{business.email}</a>
              <span class="sep-dot">·</span>
              <a class="inline-link" href={`tel:${business.phone.replaceAll(" ", "")}`}>{business.phone}</a>
            </p>
          </div>

          <div class="cta-actions">
            <Button href="/contact" variant="primary" label="Plan kennismaking" />
            <a class="cta-link" href={mapsUrl} target="_blank" rel="noopener noreferrer">
              Bekijk TwinPixel op Google Maps →
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Page-level structured data -->
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

  <style>
    /* Basic layout helpers (keep consistent with your design system) */
    .section { padding: 70px 0; }
    .container { width: min(1100px, calc(100% - 2rem)); margin: 0 auto; }

    .kicker{
      text-transform: uppercase;
      font-size: 12px;
      letter-spacing: .14em;
      color: rgba(255,255,255,.55);
      margin: 0 0 10px;
    }

    .h1{
      margin: 0;
      font-size: clamp(40px, 4.6vw, 68px);
      letter-spacing: -0.045em;
      line-height: 1.05;
      font-weight: 650;
    }

    .h2{
      margin: 0;
      font-size: clamp(28px, 4vw, 42px);
      letter-spacing: -0.03em;
      line-height: 1.15;
    }

    .lead{
      margin: 18px 0 0;
      color: rgba(255,255,255,.74);
      line-height: 1.75;
      font-size: 18px;
      max-width: 72ch;
    }
    .lead.small{
      font-size: 16px;
      margin-top: 10px;
      max-width: 80ch;
    }

    .text{
      margin: 14px 0 0;
      color: rgba(255,255,255,.68);
      line-height: 1.8;
      max-width: 80ch;
    }

    .inline-link{
      color: rgba(47,137,255,.95);
      text-decoration: none;
      border-bottom: 1px solid rgba(47,137,255,.35);
    }
    .inline-link:hover{
      border-bottom-color: rgba(47,137,255,.9);
    }
    .sep-dot{ opacity: .5; margin: 0 8px; }

    /* Hero */
    .hero-simple{ padding-top: 130px; }
    .cta{ margin-top: 26px; display:flex; gap: 12px; flex-wrap: wrap; }
    .proof{
      margin-top: 22px;
      display:flex;
      flex-wrap: wrap;
      gap: 12px;
      color: rgba(255,255,255,.52);
      font-size: 14px;
    }
    .sep{ opacity: .35; }

    /* Chips */
    .chips{ margin-top: 18px; display:flex; flex-wrap:wrap; gap: 10px; }
    .chip{
      border: 1px solid rgba(255,255,255,.12);
      background: rgba(255,255,255,.03);
      border-radius: 999px;
      padding: 8px 12px;
      color: rgba(255,255,255,.78);
      font-size: 13px;
    }

    /* Pillars */
    .pillars{
      margin-top: 18px;
      display:grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 18px;
    }
    .pillars.pillars-3{
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
    .pill{
      border: 1px solid rgba(255,255,255,.12);
      background: rgba(255,255,255,.025);
      border-radius: 16px;
      padding: 20px;
    }
    .pill-title{
      margin: 0 0 8px;
      font-weight: 650;
      color: rgba(255,255,255,.92);
      font-size: 16px;
    }
    .pill-text{
      margin: 0;
      color: rgba(255,255,255,.70);
      line-height: 1.65;
      font-size: 14px;
    }

    /* Steps */
    .steps{
      margin-top: 18px;
      display:grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 14px;
    }
    .step{
      display:flex;
      gap: 12px;
      border: 1px solid rgba(255,255,255,.12);
      background: rgba(255,255,255,.025);
      border-radius: 14px;
      padding: 16px;
    }
    .step-no{
      width: 34px;
      height: 34px;
      border-radius: 10px;
      border: 1px solid rgba(255,255,255,.14);
      display:flex;
      align-items:center;
      justify-content:center;
      color: rgba(255,255,255,.85);
      font-weight: 650;
      flex: 0 0 auto;
    }
    .step-title{ margin: 0; font-weight: 650; color: rgba(255,255,255,.92); }
    .step-text{ margin: 6px 0 0; color: rgba(255,255,255,.70); line-height: 1.65; }

    /* Reviews */
    .section-head{ margin-bottom: 18px; }
    .section-head.center{ text-align:center; }
    .reviews{ background: rgba(255,255,255,0.01); }
    .reviews-grid{
      margin-top: 18px;
      display:grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 14px;
    }
    .review-card{
      display:block;
      text-decoration:none;
      border: 1px solid rgba(255,255,255,0.08);
      background: rgba(255,255,255,0.03);
      border-radius: 16px;
      padding: 18px;
    }
    .review-stars{ display:flex; gap: 4px; margin-bottom: 12px; }
    .star{ color:#fbbf24; font-size: 18px; line-height: 1; }
    .review-text{
      margin: 0 0 12px;
      color: rgba(255,255,255,0.86);
      line-height: 1.65;
      font-style: italic;
    }
    .review-author{ border-top: 1px solid rgba(255,255,255,0.08); padding-top: 10px; }
    .author-name{ font-weight: 650; color: #fff; }
    .author-company{ color: rgba(255,255,255,0.70); font-size: 13px; margin-top: 2px; }
    .reviews-note{ margin: 14px 0 0; text-align:center; }
    .reviews-note a{ color: #2F89FF; text-decoration: none; }
    .reviews-note a:hover{ text-decoration: underline; }

    /* FAQ */
    .faq-wrap{ margin-top: 18px; display:grid; gap: 12px; }
    .faq-item{
      border: 1px solid rgba(255,255,255,.12);
      border-radius: 14px;
      background: rgba(255,255,255,.025);
      padding: 4px 0;
      overflow:hidden;
    }
    .faq-item summary{
      cursor: pointer;
      list-style: none;
      padding: 16px;
      font-weight: 650;
      color: rgba(255,255,255,.92);
    }
    .faq-item summary::-webkit-details-marker{ display:none; }
    .faq-item p{
      margin: 0;
      padding: 0 16px 16px;
      color: rgba(255,255,255,.74);
      line-height: 1.8;
    }

    /* Contact CTA */
    .cta-box{
      border: 1px solid rgba(255,255,255,0.12);
      background: rgba(255,255,255,0.04);
      border-radius: 20px;
      padding: 22px;
      display:flex;
      gap: 18px;
      align-items: center;
      justify-content: space-between;
      flex-wrap: wrap;
    }
    .cta-actions{ display:flex; flex-direction: column; gap: 10px; align-items: flex-start; }
    .cta-link{ color: rgba(255,255,255,.72); text-decoration: none; }
    .cta-link:hover{ color: rgba(255,255,255,.9); }
    .contact-mini{ max-width: 55ch; }

    @media (max-width: 900px){
      .pillars{ grid-template-columns: 1fr; }
      .pillars.pillars-3{ grid-template-columns: 1fr; }
      .steps{ grid-template-columns: 1fr; }
      .reviews-grid{ grid-template-columns: 1fr; }
      .hero-simple{ padding-top: 110px; }
    }
  </style>
</BaseLayout>
