  justify-content: center;
  align-items: center;
  gap: 100px; /* Enorme gap voor de luxe uitstraling */
  max-width: 900px;
  margin: 0 auto;
}

.logo-item {
  flex: 1;
  display: flex;
  justify-content: center;
  filter: grayscale(1) brightness(1.5);
  opacity: 0.5;
  transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
}

.client-logo {
  width: 100%;
  max-width: 180px; /* Logo's mogen nu iets groter zijn omdat het er maar 3 zijn */
  height: 50px;
  object-fit: contain;
}

.logo-item:hover {
  filter: grayscale(0) brightness(1);
  opacity: 1;
  transform: translateY(-5px);
}

@media (max-width: 900px) {
  .logo-row {
    flex-direction: column;
    gap: 60px;
  }
  .client-logo {
    max-width: 140px;
  }
}
/* =========================
   Reviews Section (Marquee)
   ========================= */

.reviews{
  padding: 5rem 0;
  background: rgba(255,255,255,0.01);
}

.reviews-header{
  text-align: center;
  margin-bottom: 3rem;
}

.reviews-header .lead{
  max-width: 600px;
  margin: 0 auto;
}

/* wrapper */
.reviews-marquee .marquee{
  position: relative;
  overflow: hidden;
  border-radius: 20px;
  margin-top: 2rem;

  -webkit-mask-image: linear-gradient(90deg, transparent, #000 8%, #000 92%, transparent);
  mask-image: linear-gradient(90deg, transparent, #000 8%, #000 92%, transparent);
}

/* track: 2 identieke helften naast elkaar */
.reviews-marquee .marquee-track{
  display:flex;
  flex-wrap:nowrap;
  width:max-content;
  gap: 0;                 /* belangrijk: geen gap tussen track A en B */
  animation: reviews-marquee 35s linear infinite;
  will-change: transform;
}

.reviews-marquee .track{
  --g: 1.25rem;
  display:flex;
  flex-wrap:nowrap;
  gap: var(--g);          /* gap tussen cards */
}

/* dit is de hele truc: trailing gap zodat de naad gelijk is */
.reviews-marquee .track:first-child{
  padding-right: var(--g);
}

/* en dan blijft -50% kloppen */
@keyframes reviews-marquee{
  from { transform: translate3d(0,0,0); }
  to   { transform: translate3d(-50%,0,0); }
}

/* Specifieke aanpassing voor Socialmediamanager */
.smm-logo {
  max-width: 240px !important; /* Groter dan de standaard 180px */
  max-height: 75px !important; /* Iets hoger voor betere leesbaarheid */
  transform: scale(1.15); /* Een extra 'boost' van 15% */
}


/* Ter herinnering, de algemene stijl die je al had (check of deze waarden kloppen): */
.client-logo {
  width: auto;
  height: auto;
  max-width: 180px;
  max-height: 50px;
  object-fit: contain;
  transition: all 0.4s ease;
}

/* cards */
.reviews-marquee .review-card{
  flex: 0 0 auto;
  width: min(520px, 86vw);
  display: block;

  background: rgba(255,255,255,0.04);
  border: 1px solid rgba(255,255,255,0.12);
  border-radius: 16px;
  padding: 1.8rem;
  text-decoration: none;
  backdrop-filter: blur(10px);

  transition: transform .2s ease, border-color .2s ease, background-color .2s ease, box-shadow .2s ease;
}

.reviews-marquee .review-card:hover{
  background: rgba(47,137,255,0.08);
  border-color: rgba(47,137,255,0.3);
  transform: translateY(-6px);
  box-shadow: 0 16px 40px rgba(47,137,255,0.15);
}

.review-stars{
  display: flex;
  gap: 0.25rem;
  margin-bottom: 1.5rem;
}

.star{
  color: #fbbf24;
  font-size: 1.25rem;
  line-height: 1;
}

.review-text{
  color: rgba(255,255,255,0.92);
  font-size: 1rem;
  line-height: 1.6;
  margin: 0 0 1.5rem 0;
  font-style: italic;
  position: relative;
}

.review-text::before{
  content: '"';
  font-size: 3rem;
  color: rgba(47,137,255,0.3);
  position: absolute;
  top: -0.5rem;
  left: -1rem;
  font-family: serif;
}

.review-author{
  border-top: 1px solid rgba(255,255,255,0.08);
  padding-top: 1rem;
}

.author-name{
  font-weight: 650;
  color: #fff;
  margin-bottom: 0.25rem;
  letter-spacing: -0.01em;
}

.author-company{
  font-size: 0.875rem;
  color: rgba(255,255,255,0.72);
}

.reviews-cta{
  text-align: center;
  padding-top: 2rem;
  border-top: 1px solid rgba(255,255,255,0.08);
}

.reviews-note{
  color: rgba(255,255,255,0.7);
  font-size: 0.95rem;
  margin: 0;
  line-height: 1.5;
}

.reviews-note a{
  color: #2F89FF;
  text-decoration: none;
  font-weight: 500;
}

.reviews-note a:hover{
  text-decoration: underline;
}

@media (prefers-reduced-motion: reduce){
  .reviews-marquee .marquee-track{
    animation: none;
    transform: none;
  }
}

