---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import Expertise from "../components/Expertise.astro";
---
<BaseLayout
  title="Twinpixel — Digital reality, pixel perfect."
  description="Premium Astro-based marketing site with a dark futuristic aesthetic."
>
  <Hero />
  <Expertise />

  <section class="section" id="contact">
    <div class="container">
      <div class="contact glass soft-border">
        <h2 class="h2">get in touch</h2>
        <p class="p">
          tell us what you’re building. we’ll respond with next steps and a realistic plan.
        </p>

        <div class="actions">
          <a class="mail" href="mailto:hello@twinpixel.nl">hello@twinpixel.nl</a>
          <span class="hint">or add a form later (netlify forms / custom backend)</span>
        </div>
      </div>
    </div>
  </section>

  <footer class="footer">
    <div class="container">
      <p>© {new Date().getFullYear()} Twinpixel. all rights reserved.</p>
    </div>
  </footer>

  <style>
    .contact{
      border-radius: var(--radius);
      padding: 34px;
      text-align:center;
    }
    .actions{
      margin-top: 18px;
      display:flex;
      flex-direction:column;
      gap: 10px;
      align-items:center;
    }
    .mail{
      padding: 12px 16px;
      border-radius: 999px;
      border: 1px solid rgba(255,255,255,.12);
      background: rgba(10,18,48,.35);
    }
    .hint{
      color: var(--muted2);
      font-size: 14px;
    }
    .footer{
      padding: 26px 0 40px;
      color: var(--muted2);
      text-align:center;
      font-size: 14px;
    }
  </style>
</BaseLayout>
