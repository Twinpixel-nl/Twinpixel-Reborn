}

/* wrapper */
.reviews-marquee .marquee{
  position: relative;
  overflow: hidden;
  border-radius: 20px;
  margin-top: 2rem;

  -webkit-mask-image: linear-gradient(90deg, transparent, #000 8%, #000 92%, transparent);
  mask-image: linear-gradient(90deg, transparent, #000 8%, #000 92%, transparent);
}

/* track: 2 identieke helften naast elkaar */
.reviews-marquee .marquee-track{
  display:flex;
  flex-wrap:nowrap;
  width:max-content;
  gap: 0;                 /* belangrijk: geen gap tussen track A en B */
  animation: reviews-marquee 35s linear infinite;
  will-change: transform;
}

.reviews-marquee .track{
  --g: 1.25rem;
  display:flex;
  flex-wrap:nowrap;
  gap: var(--g);          /* gap tussen cards */
}

/* dit is de hele truc: trailing gap zodat de naad gelijk is */
.reviews-marquee .track:first-child{
  padding-right: var(--g);
}

/* en dan blijft -50% kloppen */
@keyframes reviews-marquee{
  from { transform: translate3d(0,0,0); }
  to   { transform: translate3d(-50%,0,0); }
}



/* cards */
.reviews-marquee .review-card{
  flex: 0 0 auto;
  width: min(520px, 86vw);
  display: block;

  background: rgba(255,255,255,0.03);
  border: 1px solid rgba(255,255,255,0.08);
  border-radius: 16px;
  padding: 1.8rem;
  text-decoration: none;

  transition: transform .2s ease, border-color .2s ease, background-color .2s ease;
}

.reviews-marquee .review-card:hover{
  background: rgba(255,255,255,0.05);
  border-color: rgba(255,255,255,0.12);
  transform: translateY(-3px);
}

