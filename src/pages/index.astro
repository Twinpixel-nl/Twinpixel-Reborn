---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import Expertise from "../components/Expertise.astro";
import SectionHeader from "../components/SectionHeader.astro";
---
<BaseLayout
  title="Twinpixel — Webdesign Wageningen"
  description="Strakke websites met blauw accent. Design, performance en SEO."
>
  <Hero />
  <Expertise />

  <section class="section" id="contact">
    <div class="container">
      <SectionHeader
        title="contact"
        subtitle="vertel kort wat je wil bouwen. we reageren met een duidelijke aanpak en volgende stappen."
      />

      <div class="contact">
        <div class="box">
          <p class="line">Mail: <a href="mailto:hello@twinpixel.nl">hello@twinpixel.nl</a></p>
          <p class="line">Werkgebied: Wageningen & omgeving</p>
        </div>
      </div>
    </div>
  </section>

  <footer class="footer">
    <div class="container">
      <p>© {new Date().getFullYear()} Twinpixel.</p>
    </div>
  </footer>

  <style>
    .contact{ margin-top: 18px; }
    .box{
      border-radius: var(--radius);
      background: rgba(255,255,255,.03);
      border: 1px solid rgba(255,255,255,.10);
      padding: 18px;
      max-width: 760px;
    }
    .line{ margin: 0 0 10px; color: rgba(255,255,255,.72); }
    .line a{ color: rgba(47,137,255,.95); }
    .footer{
      padding: 26px 0 40px;
      color: rgba(255,255,255,.55);
      font-size: 13px;
    }
  </style>
</BaseLayout>
