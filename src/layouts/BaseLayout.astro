---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";

const {
  title = "Twinpixel â€” Modern digital agency",
  description = "Premium web experiences with a dark, futuristic aesthetic."
} = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.svg" />
    <title>{title}</title>
  </head>

  <body>
    <!-- ambient background glow -->
    <div class="ambient" aria-hidden="true">
      <span class="orb a"></span>
      <span class="orb b"></span>
      <span class="orb c"></span>
    </div>

    <Navbar />

    <main>
      <slot />
    </main>

    <style>
      /* ambient glow layer */
      .ambient{
        position: fixed;
        inset: 0;
        pointer-events: none;
        z-index: 0;
      }

      .orb{
        position:absolute;
        width: 520px;
        height: 520px;
        border-radius: 999px;
        filter: blur(60px);
      }

      .orb.a{
        left: -160px;
        top: -180px;
        background: rgba(96,165,250,.6);
        opacity: .12;
      }

      .orb.b{
        right: -200px;
        top: 140px;
        background: rgba(34,211,238,.5);
        opacity: .10;
      }

      .orb.c{
        left: 30%;
        bottom: -260px;
        background: rgba(99,102,241,.5);
        opacity: .08;
      }

      /* ensure content is above background */
      main{
        position: relative;
        z-index: 1;
      }
    </style>
  </body>
</html>
